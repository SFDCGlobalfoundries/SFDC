<apex:page standardController="DRT__c" extensions="DRTSearchExtn"  showHeader="false" sideBar="false" standardStylesheets="false" 
contentType="application/pdf#DRTDetails.pdf" renderAs="pdf" cache="true">


<apex:form id="searchDRT">
<apex:outputPanel id="searchDRTOutputId"> 
<apex:outputpanel id="searchDRTId" >

<table border="0" cellspacing="5">
    <tr align="center"><td><h1><u>Search DRT</u></h1></td></tr>
</table>
        
<table border="0" cellspacing="5">
  <tr>
      <td style="font-weight:bold;">Customer Name:</td>
      <td colspan="3" align="center" style="border-right:1px solid #ccc;">{!customerName}</td>
     
  </tr>
  <tr>
      <td style="font-weight:bold;">DRT Type:</td>
      <td align="center" style="border-right:1px solid #ccc;">{!drtType}</td>
      
       <td style="font-weight:bold;">Mask Set Title:</td>
       <td align="center" style="border-right:1px solid #ccc;">{!maskSetTitle}</td>
  </tr>
  <tr>
       <td style="font-weight:bold;">Status:</td>
       <td align="center" style="border-right:1px solid #ccc;">{!drtStatus}</td>
       <td style="font-weight:bold;">DRT Number:</td>
       <td align="center" style="border-right:1px solid #ccc;">{!drtNumber}</td>
  </tr>
</table>

<br></br>
<br></br>                  
        
<table border="0" cellspacing="5">
    <thead>
        <tr>
            <td style="font-weight:bold;"><span>DRT</span></td>
            <td style="font-weight:bold;"><span>Status</span></td>
        </tr>
    </thead>
    <tbody>
        <apex:repeat value="{!wrapperDRTList}" var="wrapper">
            <apex:outputLabel >
                <tr>
                    <td align="center" style="border-right:1px solid #ccc;">{!wrapper.drtName}</td>
                    <td align="center" style="border-right:1px solid #ccc;">{!wrapper.status}</td>
                </tr>
            </apex:outputLabel>
        </apex:repeat>
     </tbody>                       
 </table>            
          
</apex:outputpanel>
</apex:outputPanel>
</apex:form>          
</apex:page>