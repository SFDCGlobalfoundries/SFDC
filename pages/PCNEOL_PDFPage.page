<apex:page standardController="PCN_EOL__c" extensions="PCNEOL_PartCustomerController1" showHeader="false" applyHtmlTag="false" applyBodyTag="false" renderAs="PDF" >
<html>
   <div style="width:100%;"> 
    <p align="center">  
     <apex:image value="{!$Resource.GFLogo}" /> 
    </p>         
   </div>   
	
    <h1>Product End of Life Notification</h1>
        <html>
        <table >
        
        <tr><th style="text-align: left;white-space: nowrap;">PCN#</th>
            <td><apex:outputText value="{!PCN_EOL__c.PCN_Numbers__c}"/></td>
        </tr>
        
        <tr><th style="text-align: left;white-space: nowrap;">Title</th>
            <td><apex:outputText value="{!PCN_EOL__c.Name}"/></td>
        </tr>
        
         <tr><th >Affected Part Number</th>
            <td><apex:outputText value="{!PCN_EOL__c.Affected_Part_Numbers__c}"/></td>
         </tr>
         
         <tr><th style="text-align: left;white-space: nowrap;">Fab</th>
            <td><apex:outputText value="{!PCN_EOL__c.Fab__c}"/></td>
         </tr>
        
         <tr><th style="text-align: left;white-space: nowrap;">Owner Name</th>
            <td><apex:outputText value="{!PCN_EOL__c.Owner.Name}"/></td>
         </tr>
         
         <tr><th style="text-align: left;white-space: nowrap;">LMT Affected</th>
            <td><apex:outputText value="{!PCN_EOL__c.LMT_Affected__c}"/></td>
         </tr>
         
         <tr><th style="text-align: left;white-space: nowrap;">Reason For The Discontinuance</th>
            <td><apex:outputText value="{!PCN_EOL__c.Reason_for_the_discontinuance__c}"/></td>
         </tr>
         
         <tr><th style="text-align: left;white-space: nowrap;">EOL Status</th>
           <td><apex:outputText value="{!PCN_EOL__c.EOL_Stage__c}"/></td>
         </tr>
         
         <tr><th style="text-align: left;white-space: nowrap;">Technology Affected</th>
           <td><apex:outputText value="{!PCN_EOL__c.Technology_Affected__c}"/></td>
         </tr>
         
         <tr><th style="text-align: left;white-space: nowrap;">Package Type Affected</th>
           <td><apex:outputText value="{!PCN_EOL__c.Package_Type_Affected__c}"/></td>
         </tr>
         
         <tr><th style="text-align: left;white-space: nowrap;">Method to contrl discontinued device p/n</th>
           <td><apex:outputText value="{!PCN_EOL__c.Method_to_contrl_discontinued_device_p_n__c}"/></td>
         </tr>      
         
          <tr><th style="text-align: left;white-space: nowrap;">Last Order Date</th>
            <td><apex:outputText value="{0,date,long}">
                <apex:param value="{!PCN_EOL__c.Last_Order_Date__c}"/>
                </apex:outputText></td>
          </tr>
          
          <tr><th style="text-align: left;white-space: nowrap;">Last Ship Date</th>
            <td><apex:outputText value="{0,date,long}">
                <apex:param value="{!PCN_EOL__c.Last_Ship_Date__c}"/>
                </apex:outputText></td>
          </tr>
          
           <tr><th style="text-align: left;white-space: nowrap;">End of Service and Support Date</th>
            <td><apex:outputText value="{0,date,long}">
                <apex:param value="{!PCN_EOL__c.End_of_Service_and_Support_Date__c}"/>
                </apex:outputText></td>
          </tr>
        </table>
        </html>
        <html>      
         <table border="1"  cellspacing="0" cellpadding="0" >
             <tr>
              <th>Customer Name</th>
              <th>Device P/N</th>
              <th>Customer P/N</th>
              <th>PO#</th> 
              <th>Team Role</th>
              <th>Name</th>
             </tr>
             
             
        
    <apex:repeat value="{!listwrapper}" var="l">
      
     
    <tr><td>
        <apex:outputText value="{!l.AccountName}"/>
        </td>
     
        <td>
      <table> 
       <apex:repeat value="{!l.partcustomer}" var="p">
       <tr>
        <td> <apex:outputText value="{!p.IBM_Part_Number__c}"/></td>
       </tr>
      </apex:repeat>     
      </table>
        </td>

     <td>
     <table> 
       <apex:repeat value="{!l.partcustomer}" var="p">
       <tr>
        <td> <apex:outputText value="{!p.Shipment_Line_Internal__r.Cust_Part_Num__c}"/></td>
       </tr>
       </apex:repeat>     
      </table>
     </td>
     
     <td>
      <table> 
       <apex:repeat value="{!l.partcustomer}" var="p">
       <tr>
        <td> <apex:outputText value="{!p.Shipment_Line_Internal__r.PO_Num__c}" rendered="{!IF(l.mposelected,TRUE,FALSE)}" /></td>
        <td> <apex:outputText value="-" rendered="{!IF(l.mposelected,FALSE,TRUE)}" /></td>
       </tr>
       </apex:repeat>     
      </table>
     </td>
          
     <td>
      <table> 
       <apex:repeat value="{!l.ATWrapper}" var="p">
        <tr>
         <td> <apex:outputText value="{!p.TeamRoleCE}"/></td>
        </tr>
       </apex:repeat>     
      </table>
     </td>
     
     <td>
      <table> 
       <apex:repeat value="{!l.ATWrapper}" var="p">
        <tr>
         <td> <apex:outputText value="{!p.UserName}"/></td>
        </tr>
       </apex:repeat>     
      </table>
     </td>
     </tr>
    </apex:repeat>
         
         </table>
         </html>        
   </html> 
</apex:page>