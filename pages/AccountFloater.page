<apex:page controller="AccountFloaterCtrl">
   
    <script>

    var ele=window.parent.document.getElementById('tabContainer').innerHTML;
    window.parent.document.getElementById('tabContainer').innerHTML=ele+'<div title="{!accName} ({!accShortName})" class="floater">{!accName} ({!accShortName})</div>';
    if('{!ISPICKVAL($User.UserType,'Standard')}'=='true'){
        var eleList=window.parent.document.getElementsByClassName('floater');
        for(var i=0;i<eleList.length;i++){
            eleList[i].style.display='none';
        }
        }
    </script>
    
</apex:page>