<apex:page standardController="Request_Information__c" extensions="BnP_AttachQuote" action="{!displatAttachment}">
<apex:form enctype="multipart/form-data">
        <apex:pageMessages />
        <apex:pageBlock title="Attach Quote Document">
            <apex:pageBlockButtons location="top">
                  <apex:commandButton value="Save" action="{!saveApplicant}" />
            </apex:pageBlockButtons>
            <apex:pageBlockSection showHeader="false">
                <!--<div class = "ChooseFileContainer">
                    <apex:inputFile value="{!objAttachment.body}" filename="{!objAttachment.name}" contentType="{!objAttachment.ContentType}" />
                </div>-->
                <apex:pageBlockSectionItem >
                  <apex:outputLabel value="Select file to attach"/>
                  <apex:inputFile value="{!objAttachment.body}" filename="{!objAttachment.name}" contentType="{!objAttachment.ContentType}" />
                </apex:pageBlockSectionItem>

            </apex:pageBlockSection>
            <apex:pageBlockSection showHeader="false" columns="1">
                <apex:outputLink value="https://globalfoundries--c.ap4.visual.force.com/apex/VFTeamRoomDetail?id=a0J6F00000xAxfQUAS" id="theLink1" target="_blank">Quote Template Reference</apex:outputLink>
                <!--<apex:outputLink value="https://www.salesforce.com" id="theLink2">Quote Reference Link2</apex:outputLink>
                <apex:outputLink value="https://www.salesforce.com" id="theLink3">Quote Reference Link3</apex:outputLink>
                <apex:outputLink value="https://www.salesforce.com" id="theLink4">Quote Reference Link4</apex:outputLink>
                <apex:outputLink value="https://www.salesforce.com" id="theLink5">Quote Reference Link5</apex:outputLink>-->
            </apex:pageBlockSection>
        </apex:pageBlock>
        <apex:pageBlock title="Quote">
            <apex:pageBlockTable value="{!wrapperList}" var="o" rendered="{!NOT(ISNULL(wrapperList))}">
                <apex:column >
                    <apex:facet name="header">Quote Document</apex:facet>
                    <a href="/{!o.attRec.id}" target="_blank">{!o.attRec.Name}</a>
                </apex:column>
               
                <apex:column >
                    <apex:facet name="header">Quote Attachment Date</apex:facet>
                    {!o.bnpQuoteAttRec.Quote_Attachment_Date__c}
                </apex:column>
            </apex:pageBlockTable>
            <apex:outputLabel value="No records to display" rendered="{!(ISNULL(wrapperList))}" styleClass="noRowsHeader"></apex:outputLabel>
        </apex:pageBlock>
    </apex:form>    
           
</apex:page>