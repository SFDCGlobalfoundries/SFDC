<apex:page standardController="Case" tabstyle="case" sidebar="false" readOnly="true" showHeader="false" id="caseHelpFeed" >
  <style>
    h1{text-align:center;color:red;}
    .myFormStyle {
    background-color:#FFCC99;
    }
  </style>
  <apex:form styleClass="myFormStyle">
    <apex:pageblock id="pgBlock1" mode="maindetail"  >
      <apex:pageblocksection columns="1" showHeader="false" rendered="{!NOT(Case.Internal_or_external__c)}"  >
        <h1>Warning:</h1>
        This case is visible to customer in the customer portal, make sure you direct your Chatter and Comments appropriately!
      </apex:pageblocksection>
      <apex:pageblocksection columns="1" showHeader="false" rendered="{!Case.Internal_or_external__c}" >
        <h1>Warning:</h1>
        This case is Internal Use Only. Chatter and Comments will not be visible to customer in the customer portal!
      </apex:pageblocksection>
    </apex:pageblock>
  </apex:form>
</apex:page>