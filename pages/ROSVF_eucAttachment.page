<apex:page title="Upload EUC Form" controller="ROS_ControllerSearchReticleGFForm" tabStyle="Ros__tab" sidebar="false" showChat="false" showHeader="false"> 
    <apex:form id="eucuploadform">
        <apex:pageblock title="Upload EUC Form" mode="detail">
            <apex:pagemessages />
            <apex:pageBlockButtons location="bottom" >
                <apex:commandButton value="Save" action="{!eucAttachupload}" disabled="{!checkeucupload}"/>
                <apex:actionRegion >
                <apex:commandButton value="Reset" action="{!eucAttachReset}" reRender="eucuploadform" disabled="{!checkeucupload}"/>
                <apex:commandButton value="Close" onclick="top.opener.location.reload(true);top.close();"/>
                </apex:actionRegion>
            </apex:pageBlockButtons>
                        
            <apex:pageBlockSection showHeader="false" columns="1">            
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="File" for="eucfile"/>
                    <apex:inputFile value="{!eucAttach.Body}" fileName="{!eucAttach.Name}" id="eucfile" disabled="{!checkeucupload}"/>
                </apex:pageBlockSectionItem>            
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Description" for="eucfiledesc"/>
                    <apex:inputTextarea value="{!eucAttach.description}" id="eucfiledesc" rows="6" cols="40" disabled="{!checkeucupload}"/>
                </apex:pageBlockSectionItem>            
            </apex:pageBlockSection>
        </apex:pageblock>
    </apex:form>
</apex:page>