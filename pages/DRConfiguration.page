<apex:page controller="DRConfigurationController" tabStyle="DR_Configuration__c">
    <apex:form >
        <apex:actionFunction name="selectFieldfn" action="{!selectPicklistField}"/>
        <apex:pageBlock id="DRconfig">
            <apex:pagemessages ></apex:pagemessages>
            <apex:pageBlockButtons >
                <apex:commandButton value="Save" action="{!save}" oncomplete="" reRender="DRconfig"/>                                            
            </apex:pageBlockButtons>
            <apex:pageBlockSection title="Configure Deployment Request Picklists" columns="1">
                <apex:pageBlockSectionItem >
                    <apex:outputText value="Select Picklist:"></apex:outputText>
                    <apex:selectList value="{!picklistName}" multiselect="false" size="1" onchange="selectFieldfn()"> 
                        <apex:selectOptions value="{!picklistValues}"></apex:selectOptions>
                    </apex:selectList>                
                </apex:pageBlockSectionItem>
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Add one or more picklist values below. Each value should be on its own line and it is used for both a value's label and API name."/>
                </apex:pageBlockSectionItem>
                <apex:pageBlockSectionItem >
                    <apex:outputtext value="Enter Value:"></apex:outputtext>
                    <apex:inputTextArea value="{!newpicklistVal}" style="width: 175px; height: 149px;"/>
                </apex:pageBlockSectionItem>
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value=""/>
                    <apex:commandButton value="Add" action="{!add}"/>
                </apex:pageBlockSectionItem>                                     
            </apex:pageBlockSection>
            <apex:pageBlockSection title="Configure Picklist Field Dependency" columns="1">
                <apex:pageBlockSectionItem >
                    <apex:outputText value="Please click link to configure dependent picklists" />
                    <a href="#" onclick="window.open('{!serverURL}/setup/ui/dependencyList.jsp?tableEnumOrId={!customObjectId}&setupid=CustomObjects')">Click here</a>                   
                </apex:pageBlockSectionItem>               
            </apex:pageBlockSection>
            <apex:pageBlockSection title="Configure Deployment Request Approvers" columns="1">
                <apex:outputLabel value="Non SOX Compliance Approvers" style="font-weight:bold;"></apex:outputLabel>
                <apex:outputLabel value="Default Approver:" style="font-weight:bold;"></apex:outputLabel>
                <apex:inputField value="{!config.Standard_Apps_Approver1__c}"/>
                <apex:inputField value="{!config.Standard_Apps_Approver2__c}"/>
                <apex:inputField value="{!config.Standard_Apps_Approver3__c}"/>
                <apex:outputLabel value="SOX Compliance Approvers" style="font-weight:bold;"></apex:outputLabel>     
                <apex:outputLabel value="Risk Start" style="font-weight:bold;"></apex:outputLabel>                 
                <apex:inputField value="{!config.Risk_Start_Approver1__c}"/>
                <apex:inputField value="{!config.Risk_Start_Approver2__c}"/>
                <apex:inputField value="{!config.Risk_Start_Approver3__c}"/>
                <apex:outputLabel value="RMA" style="font-weight:bold;"></apex:outputLabel>                 
                <apex:inputField value="{!config.RMA_Approver1__c}"/>
                <apex:inputField value="{!config.RMA_Approver2__c}"/>
                <apex:inputField value="{!config.RMA_Approver3__c}"/>
                <apex:outputLabel value="Account Management" style="font-weight:bold;"></apex:outputLabel>                 
                <apex:inputField value="{!config.Account_FBO_EBiZ_Approver__c}"/>
                <apex:inputField value="{!config.Account_Internal_Control__c}"/>
                <apex:inputField value="{!config.Account_CAB_Approver__c}"/>
                <apex:outputLabel value="Opportunity Management" style="font-weight:bold;"></apex:outputLabel>                 
                <apex:inputField value="{!config.Opty_FBO_EBiZ_Approver__c}"/>
                <apex:inputField value="{!config.Opty_Internal_Control_Approver__c}"/>
                <apex:inputField value="{!config.Opty_CAB_Approver__c}"/>
            </apex:pageBlockSection>
            <apex:pageBlockSection title="Other Configurations">
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Submitter Can not be Approver"/><apex:inputCheckbox value="{!config.ApproverSubmitter_Check__c}"/>
                </apex:pageBlockSectionItem>
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>