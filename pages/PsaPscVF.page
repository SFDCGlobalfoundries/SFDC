<apex:page id="PsaPscVF" controller="PsaPscController" showHeader="true" sidebar="true" tabStyle="Device__c">

<apex:sectionHeader title="Calculating PSC / PSA " >
    <apex:form >
        
      
        <apex:pageBlock title="Select the Desired PSC - MPO/DMEA" rendered="{!setboolmpo}" > 
               <apex:panelGrid columns="4">
               <apex:pageblockSection > 
               
               <apex:selectlist size="1" label="PSC:"  value="{!selectedValue}" style="width:80px;height:25px;" >
               <apex:selectoptions value="{!pscpicklist }"  >
                </apex:selectoptions>
                </apex:selectlist>
               </apex:pageblockSection>
            
        <apex:commandButton value="Submit" action="{!Submit}" style="width:100px"  /> 
       
         <apex:commandButton value="Cancel" action="{!cancelbu}" style="width:100px" /> 
        </apex:panelGrid>      
             
        </apex:pageblock>
         <apex:pageBlock title="Select the Desired PSC and PSA - INFINEON/LANTIQ" rendered="{!setconflag}" > 
         <apex:pageMessage summary="You must consult with your Export and Asset Protection Teams to determine the appropriate PSC and PSA codes for this program, and then select the provided codes from the menu below." severity="info" strength="3"/>
               <apex:panelGrid columns="4">
               <apex:pageblockSection > 
               
               <apex:selectlist size="1" label="PSC:"  value="{!selectedValuepsc}" style="width:80px;height:25px;" >
               <apex:selectoptions value="{!pscpicklistflag }"  >
                </apex:selectoptions>
                </apex:selectlist>
              
                <apex:selectlist size="1" label="PSA:"  value="{!selectedValuepsa}" style="width:80px;height:25px;" >
               <apex:selectoptions value="{!psapicklistfalg }"  >
                </apex:selectoptions>
                </apex:selectlist>
               </apex:pageblockSection>
            
        <apex:commandButton value="Submit" action="{!Submitflag}"  style="width:100px" /> 
         <apex:commandButton value="Cancel" action="{!cancelbu}" style="width:100px" />  
        </apex:panelGrid>      
           
        </apex:pageblock>
   <div id ="sder" style="display:{!IF(showerr,'','none')};" ><span style="color:#ff0000"> Please select a value </span> </div>
    </apex:form>
  </apex:sectionheader>
        

</apex:page>