<apex:page standardController="CuSR_Cost__c" extensions="CuSRNewEditCostInfoExtension" tabStyle="CuSR_Form__c">
    <!-- Header -->
    <apex:sectionHeader title="{!$ObjectType.CuSR_Cost__c.label}" subtitle="New CuSR Cost" rendered="{!cusrCost.Id == null}"/>
    <apex:sectionHeader title="{!$ObjectType.CuSR_Cost__c.label} Edit" subtitle="{!cusrCost.Name}" rendered="{!cusrCost.Id != null}"/>
    <apex:form >
        <apex:pageBlock >
            <apex:pageblockButtons >
                <apex:commandButton value="Save" action="{!Save}"/>
                <apex:commandButton value="Cancel" action="{!Cancel}"/>
            </apex:pageblockButtons>
            <apex:pageBlockSection collapsible="false">
                
                    <apex:inputField value="{!cusrCost.Implementation_Comments__c}"/>
                    <apex:inputField value="{!cusrCost.Implementation__c}"/>
                    <apex:pageBlockSectionItem rendered="{!cusrCost.Site__c == 'Singapore'}">
                    <apex:outputLabel value="{!$ObjectType.CuSR_Cost__c.fields.Fab__c.label}"/>
                    <apex:selectList value="{!singaporeSelectedFab}" multiselect="false" size="1">
                        <apex:selectOption itemValue="None" itemLabel="--None--"/>
                        <apex:selectOption itemValue="FAB 2" itemLabel="FAB 2" rendered="{!cusrForm.FAB_2__c && !(cusrForm.FAB_2_Void__c)}"/>
                        <apex:selectOption itemValue="FAB 3" itemLabel="FAB 3" rendered="{!cusrForm.FAB_3__c && !(cusrForm.FAB_3_Void__c)}"/>
                        <apex:selectOption itemValue="FAB 3E" itemLabel="FAB 3E" rendered="{!cusrForm.FAB_3E__c && !(cusrForm.FAB_3E_Void__c)}"/>
                        <apex:selectOption itemValue="FAB 5" itemLabel="FAB 5" rendered="{!cusrForm.FAB_5__c && !(cusrForm.FAB_5_Void__c)}"/>
                        <apex:selectOption itemValue="FAB 6" itemLabel="FAB 6" rendered="{!cusrForm.FAB_6__c && !(cusrForm.FAB_6_Void__c)}"/>
                        <apex:selectOption itemValue="FAB 7" itemLabel="FAB 7" rendered="{!cusrForm.FAB_7__c && !(cusrForm.FAB_7_Void__c)}"/>
                    </apex:selectList>
                    </apex:pageBlockSectionItem>
                    <apex:pageblockSectionItem rendered="{!cusrCost.Site__c == 'Singapore'}"/>
                    <apex:outputField value="{!cusrCost.Labour_Cost__c}"/>
                    <apex:inputField value="{!cusrCost.Labour_Hours__c}"/>
                    <apex:inputField value="{!cusrCost.Comments_Labour_Cost__c}"/>
                    <br/>
                    <apex:inputField value="{!cusrCost.Hardware_Cost__c}"/>
                    <apex:inputField value="{!cusrCost.Comments_Hardware_Cost__c}"/>
                    <apex:inputField value="{!cusrCost.Software_Cost__c}"/>
                    <apex:inputField value="{!cusrCost.Comments_Software_Cost__c}"/>
                    <apex:inputField value="{!cusrCost.Other_Cost__c}"/>
                    <apex:inputField value="{!cusrCost.Comments_Other_Cost__c}"/>
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>  
</apex:page>