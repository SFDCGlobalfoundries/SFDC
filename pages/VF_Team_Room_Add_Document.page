<apex:page standardController="Team_Room__c"  extensions="cls_Team_Room_Add_Document">
    
    <apex:sectionHeader title="Add Document"/>
    <apex:form >
        <apex:pageBlock id="xy">
        <apex:pageMessages id="MessageId"/>
            <apex:pageBlockSection title="Please select the item type" >
                <apex:repeat value="{!itemList}" var="v">
                    <apex:outputPanel >
                        <input type = "radio" name = "radioButton" id = "radioButton" onclick= "setRadioValue('{!v}')" value= "v"    />
                        <apex:outputLabel value="{!v}">
                        </apex:outputLabel>
                    </apex:outputPanel>
                    <br/>
                    
                </apex:repeat> 
             </apex:pageblockSection> 
             <apex:pageBlockSection id="searchBlock">
             <apex:outputPanel rendered="{!showsearchPanel}" id="searchPanel">
                    <apex:inputtext id="searchTextBox" value="{!searchParam}">
                         <apex:param value="Design Spec" name="itemTypeName" id="itemTypeName"/>  
                    </apex:inputtext>&nbsp;&nbsp;
                     <apex:outputLabel value="{!$Label.FV2_Latest_Revision}" rendered="{!showLatestRevision}"/>
                     
                    <apex:inputCheckbox id="LatestRevision" title="Latest Revision" value="{!isLatestRevision}"  rendered="{!showLatestRevision}">
                        <apex:actionSupport event="onclick" action="{!GetSelected}" rerender="Selected_PBS"/>
                    </apex:inputCheckbox>&nbsp;&nbsp;
                    <apex:commandButton Id="btnSearch" action="{!search}"  rerender="xyz,MessageId" title="Search" value="Search"/>                  
                </apex:outputPanel>
                </apex:pageBlockSection>    
             <apex:actionFunction action="{!itemInfoGererate}" reRender="xyz,searchBlock,MessageId" name="setRadioValue">
                    <apex:param value="" name="itemType" id="itemType"/>               
                </apex:actionFunction>  
            
            <!-- <apex:pageBlockSection id="xyz" rendered="{!showList}"> -->
            <apex:pageBlockSection id="xyz" columns="1">
                <apex:pageBlockTable value="{!wrapperItemList}" var="w" rendered="{!(wrapperItemList.size != 0)}" >
                    
                    <apex:column style="width:8%" headerValue="Select" >
                        <apex:inputCheckbox value="{!w.checkbox}" />
                    </apex:column>
                    <apex:column style="width:23%" headerValue="{!itemType} name">
                        <apex:outputLabel value="{!w.name}"></apex:outputLabel>
                    </apex:column>
                    <apex:column style="width:23%" headerValue="Release Status">
                        <apex:outputLabel value="{!w.releaseStatus}"></apex:outputLabel>
                    </apex:column>
                    <apex:column style="width:23%" headerValue="Technology Type">
                        <apex:outputLabel value="{!w.technologyType}"></apex:outputLabel>
                    </apex:column>
                    <apex:column style="width:23%" headerValue="Tech Geometry">
                        <apex:outputLabel value="{!w.techGeometry}"></apex:outputLabel>
                    </apex:column>
                    <apex:column style="width:23%" headerValue="Latest Revision" rendered="{!showLatestRevision}">
                        <apex:inputCheckbox id="LatestRevision" value="{!w.latestRevision}" disabled="true" />                        
                    </apex:column>                                        
                </apex:pageBlockTable>
            </apex:pageBlockSection> 
            <apex:pageBlockButtons >
                <apex:commandButton action="{!submitItem}" value="Add Document" />
                <apex:commandButton action="{!cancelAction}" value="Cancel" />                
            </apex:pageBlockButtons> 
            
            <apex:panelGrid columns="4" >
            <apex:commandLink action="{!first}" reRender="xyz">First</apex:commandlink>
            <apex:commandLink action="{!previous}" reRender="xyz">Previous</apex:commandlink>
            <apex:commandLink action="{!next}" reRender="xyz">Next</apex:commandlink>
            <apex:commandLink action="{!last}" reRender="xyz">Last</apex:commandlink>
            </apex:panelGrid>  
            
        </apex:pageBlock>       
       
        
    </apex:form>    
</apex:page>