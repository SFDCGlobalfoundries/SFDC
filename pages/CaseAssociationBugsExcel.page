<apex:page controller="CaseAvailableRelatedBugs" id="page" readOnly="true" showHeader="false" Sidebar="false" contentType="application/vnd.ms-excel#CaseAssociationBugs.xls" >
    <!-- Schema added to add autofilter for header row in Excel sheet -->
    <html xmlns:v="urn:schemas-microsoft-com:vml" xmlns:o="urn:schemas-microsoft-com:office:office" xmlns:x="urn:schemas-microsoft-com:office:excel" xmlns="http://www.w3.org/TR/REC-html40">
        <head></head> 
        <body > 
            <apex:pageBlock id="results">
                <!-- HTML Table used to display data  in Excel Sheet with Grid Lines -->
                <table border="1" cellpadding="1" cellspacing="0" style="width:30%;border:1px solid #000000;font-familyans-serif;font-size:10px">
                    <tr style="font-family:verdana;color:Black;font-size:12px;height=18px;width:20%;">  
                        <!-- Autofilter added for header row in Excel sheet -->
                        <td x:autofilter='all' style="background-color: #DAFFFF" ><b> <apex:outputText value="Case Number"  /></b> </td>
                        <td x:autofilter='all' style="background-color: #DAFFFF" ><b> <apex:outputText value="Bug Number"  /></b> </td>
                        <apex:outputPanel rendered="{!Isportal}">
                            <td x:autofilter='all' style="background-color: #DAFFFF" ><b> <apex:outputText value="Status"/></b> </td>
                        </apex:outputPanel>
                    </tr>
                    
                    <apex:repeat value="{!caseObjExpList}" var="cSet" id="theRepeat"> 
                        <tr border="1" style="font-family:verdana;color:Black;font-size:12px;width:20%;"> 
                            <td align='left'><apex:outputText value="{!cSet.caseNumber}"/></td>
                            <td ><apex:outputText value="{!cSet.bugNumber}"/></td>
                            <apex:outputPanel rendered="{!Isportal}">
                                <td ><apex:outputText value="{!cSet.bugStatus}"/></td>
                            </apex:outputPanel> 
                        </tr> 
                    </apex:repeat> 
                    
                </table>
                <br/> <br/> <br/>

                <apex:outputtext > Confidential Information - Do Not Distribute</apex:outputtext>
                <br/>
                <apex:outputtext >Generated By: {!$User.FirstName}  {!$User.LastName}  {!Now()} </apex:outputtext>
                <br/>
                <apex:outputtext value="GLOBALFOUNDRIES" />
            </apex:pageBlock>
        </body >
    </html>
</apex:page>