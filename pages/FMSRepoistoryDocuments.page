<apex:page standardcontroller="Document" extensions="FMSRepoistoryDocumentsExt" showHeader="false">
    <apex:form >
        <apex:pageBlock title="FMS Repository"><!-- Changed the label by Abhita for new UAT issue #166-->
             <apex:pageblockTable value="{!docs}" var="d" >
                 <apex:column headerValue="Action">
                    <apex:commandlink action="/GlobalfoundryView/servlet/servlet.FileDownload?file={!d.Id}"  target="_blank" value="View" style="color:blue"/>
                 </apex:column>
                 <apex:column headerValue="Name" value="{!d.Name}"/>
                 <apex:column headerValue="File Size" value="{!d.BodyLength}"/>
                 <apex:column headerValue="Last Modified" value="{!d.LastModifiedDate}"/>
                 <apex:column headerValue="Type" value="{!d.Type}"/>
             </apex:pageblockTable>
        </apex:pageBlock>
    </apex:form>
</apex:page>