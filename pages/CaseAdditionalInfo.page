<apex:page standardController="Case" sidebar="{!NOT(ISNULL($CurrentPage.parameters.view))}" showChat="false" showHeader="{!NOT(ISNULL($CurrentPage.parameters.view))}" tabStyle="Case" cache="false" >      
    <script>
    var Sec_Colors = ["#56DEF0", "#ED55D6", "#ACE3BC"];  // put hash code of color here according to number of section.
    
    window.onload = function(){       
        var Sections = document.getElementsByClassName('pbSubheader brandTertiaryBgr tertiaryPalette');
 
        for(var i = 0; i < Sections.length; i++){           
            Sections[i].style.backgroundColor = Sec_Colors[i];
        }
    };
    </script>
     <apex:form id="formId">
            <!--  Page layout   -->
            <apex:outputPanel rendered="{!ISNULL($CurrentPage.parameters.view)}" >
                <apex:pageblock id="pgBlock1" mode="maindetail"  >
                    <apex:pageblocksection columns="2" showHeader="false" title="Case Information">
                        <apex:repeat value="{!$ObjectType.Case.fieldsets.CaseCITInformation}" var="fieldValue">
                            <apex:outputfield value="{!Case[fieldValue]}" rendered="{!Case[fieldValue]!=''}" />
                        </apex:repeat>
                        <apex:repeat value="{!$ObjectType.Case.fieldsets.CaseMilestoneInfo}" var="fieldValue">
                            <apex:outputfield value="{!Case[fieldValue]}" rendered="{!Case[fieldValue]!=''}" />
                        </apex:repeat>
                    </apex:pageblocksection>
                    <apex:pageBlockButtons location="bottom" >
                        <apex:outputLink value="{!URLFOR('/apex/CaseAdditionalInfo', null, [id=Id,view=true])}" target="_top"><span style="color:Red">View All</span></apex:outputLink>
                    </apex:pageBlockButtons>
                </apex:pageblock>
            </apex:outputPanel>
            <!--  Page layout   -->
            <!--  Full Page    -->
            <apex:outputPanel rendered="{!NOT(ISNULL($CurrentPage.parameters.view))}" >
                <apex:sectionHeader title="Case Additional Information" subtitle="{!Case.CaseNumber}" />
                <apex:outputLink value="/{!Case.Id}" target="_top"><span style="color:Blue">Back to Case Records</span></apex:outputLink>
                <apex:pageblock id="pgBlock2" mode="maindetail" >
                    <apex:pageBlockSection title="Case Information" columns="1" showHeader="false">
                        <apex:outputField value="{!Case.CaseNumber}" />
                        <apex:outputField value="{!Case.Subject}" />
                    </apex:pageBlockSection>
                    <apex:pageblocksection columns="2" title="Case Additional Information" collapsible="false" >
                        <apex:repeat value="{!$ObjectType.Case.fieldsets.CaseCITInformationDetail}" var="fieldValue">
                            <apex:outputfield value="{!Case[fieldValue]}" rendered="{!Case[fieldValue]!=''}" />
                        </apex:repeat>
                        <apex:repeat value="{!$ObjectType.Case.fieldsets.CaseMilestoneInfoDetail}" var="fieldValue">
                            <apex:outputfield value="{!Case[fieldValue]}" rendered="{!Case[fieldValue]!=''}" />
                        </apex:repeat>
                        <apex:repeat value="{!$ObjectType.Case.fieldsets.CaseAdditionalInfoCheckbox}" var="fieldValue">
                            <apex:outputfield value="{!Case[fieldValue]}" rendered="{!Case[fieldValue]}" />
                        </apex:repeat>
                    </apex:pageblocksection>
                </apex:pageblock>
            </apex:outputPanel>
            <!--  Full Page    -->                   
        </apex:form>
</apex:page>