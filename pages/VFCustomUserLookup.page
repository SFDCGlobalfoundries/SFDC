<apex:page showHeader="false" sideBar="false" controller="ClsCustomLookupController" title="Search">

<body class="lookupTab">
<div class="lookup">
  <div class="bPageTitle">
    <div class="ptBody secondaryPalette">
      <div class="content">
        <img title="" class="pageTitleIcon" alt="" src="/s.gif" />
          <h1>Lookup</h1>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
    function closeWindow(){
      
           opener.location.reload(); 
           window.close();
    }
    
   
</script> 
<apex:form id="frm">
      
          <apex:outputPanel id="top">
            <apex:outputLabel value="Search"/> 
                <apex:inputText id="txtSearch" value="{!searchText}" />
                <apex:param name="searchvalue" value="{!searchText}" />
                <apex:commandButton id="btnGo" value="Go" action="{!Search}" >
                </apex:commandButton>
                <br/><br/>
                You can use "*" as a wildcard next to other characters to improve your search results. For example, "ad*" returns all records with a word in one of the searched fields that begins with "ad".
            
        </apex:outputPanel>
        
  <apex:pageBlock >
   <apex:pageBlockTable value="{!Totaluserlist}" var="U" id="block1">
        <apex:column headerValue="Full Name">
         
           <!-- <apex:commandLink value="{!U.username}" onclick="closeWindow();"/>
            <apex:param name="selectedvalue" value="{!U.username}" assignTo="{!selectedvalue}"/>-->
             <apex:outputLink value="javascript:top.window.opener.lookupPick2('{!FormTag}','{!UserTextBox}_lkid','{!UserTextBox}','{!U.UserID}','{!U.username}', false)" rendered="{!NOT(ISNULL(U.UserId))}">{!U.username}</apex:outputLink>
         </apex:column>
         
         <apex:column headerValue="Role">
           <apex:outputText value="{!U.UserRole}"> 
           </apex:outputText>
         </apex:column>
         
         <apex:column headerValue="Profile">
           <apex:outputText value="{!U.UserProfile}">
           </apex:outputText>
         </apex:column>
         
         <apex:column headerValue="Title">
           <apex:outputText value="{!U.UserTitle}">
           </apex:outputText>
         </apex:column>
         
         <apex:column headerValue="Manager">
           <apex:outputText value="{!U.UserManager}">
           </apex:outputText>
         </apex:column>
         
      </apex:pageBlockTable>
        
        
        
   </apex:pageBlock>
</apex:form>  
</body> 
</apex:page>