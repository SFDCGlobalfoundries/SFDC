<apex:page standardController="Portal_Tab_Access__c" extensions="InlineITARAccessSetupCntr" showHeader="false" sidebar="false" action="{!validateAuthorization}">
    <apex:form >
        <apex:pageMessages />
        <apex:outputPanel rendered="{!message != null && message != ''}">
            <font color="red" style="font-size:16px"><b>{!message}</b></font>
        </apex:outputPanel>
        <apex:outputPanel rendered="{!message == null && message == ''}">
            <apex:pageBlock title="ITAR Details" mode="edit" rendered="{!isedit}">
                <apex:pageBlockButtons location="top">
                    <apex:commandButton value="Save" action="{!Save}"/> 
                    <apex:commandButton value="Cancel" action="{!Cancel}"/>
                </apex:pageBlockButtons>
                <apex:pageBlockSection collapsible="false" columns="2">
                    <apex:inputField label="DropBox (ITAR)" value="{!portalCon.DropBox_ITAR__c}"/>
                    <apex:inputField label="DropBox (Non-ITAR)" value="{!portalCon.DropBox_non_ITAR__c}"/>
                    <apex:inputField label="TeamRoom (ITAR)" value="{!portalCon.TeamRoom_ITAR__c}"/>      
                    <apex:inputField label="Remote Mask Viewer (ITAR)" value="{!portalCon.Remote_Mask_Viewer_ITAR__c}"/>
                    <apex:inputField label="Remote Mask Viewer (Non-ITAR)" value="{!portalCon.Remote_Mask_Viewer_non_ITAR__c}"/>
                </apex:pageBlockSection>
            </apex:pageBlock>
            <apex:pageBlock title="ITAR Details" mode="view" rendered="{!NOT(isedit)}">
                <apex:pageBlockButtons location="top">
                    <apex:commandButton value="Edit" action="{!Edit}" disabled="{!disableEdit}"/>
                </apex:pageBlockButtons>
                <apex:pageBlockSection collapsible="false" columns="2">
                    <apex:outputField label="DropBox (ITAR)" value="{!portalCon.DropBox_ITAR__c}"/>
                    <apex:outputField label="DropBox (Non-ITAR)" value="{!portalCon.DropBox_non_ITAR__c}"/>
                    <apex:outputField label="TeamRoom (ITAR)" value="{!portalCon.TeamRoom_ITAR__c}"/>      
                    <apex:outputField label="Remote Mask Viewer (ITAR)" value="{!portalCon.Remote_Mask_Viewer_ITAR__c}"/>
                    <apex:outputField label="Remote Mask Viewer (Non-ITAR)" value="{!portalCon.Remote_Mask_Viewer_non_ITAR__c}"/>
                </apex:pageBlockSection>
            </apex:pageBlock>
        </apex:outputPanel>
        <br/>
        <br/>
        <apex:outputPanel rendered="{!enableEditMessage != null && enableEditMessage != '' && disableEdit && message == null && message == ''}">
            <font color="red" style="font-size:14px"><b>{!enableEditMessage}</b></font>
        </apex:outputPanel>
        <br/>
        <br/>
        <apex:outputPanel rendered="{!disclaimer != null && disclaimer != ''}">
            <font color="green" style="font-size:14px"><b>{!disclaimer}</b></font>
        </apex:outputPanel>
    </apex:form>
</apex:page>