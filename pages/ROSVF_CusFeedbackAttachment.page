<apex:page title="Upload Customer Feedback " controller="ROS_ControllerSearchReticleGFForm" tabStyle="Ros__tab" sidebar="false" showChat="false" showHeader="false"> 
    <apex:form id="cuploadform">
        <apex:pageblock mode="detail">
            <apex:pagemessages />
            <apex:pageBlockButtons location="bottom" >
                <apex:commandButton value="Attach" action="{!attachCusFeedback}"/>
                <apex:commandButton value="Close" action="{!cancelCustFeedback}"  />
                <apex:commandButton value="Cancel" action="{!cancelCustFeedback}" immediate="true" />
            </apex:pageBlockButtons>
             <apex:pageBlockSection >
              <apex:pageblockSectionItem >
               <apex:outputLabel value="Justification for Waive off" rendered="{!wReasonFlag}" />
                  <apex:inputText value="{!waivedReason}" rendered="{!wReasonFlag}"  required="true"  />
              </apex:pageblockSectionItem>
             </apex:pageBlockSection>
            
            <apex:pageBlockSection showHeader="false" columns="1">            
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="File" for="cusfile"/>
                    <apex:inputFile value="{!custAttach.Body}" fileName="{!custAttach.Name}" id="cusfile"/>
                </apex:pageBlockSectionItem>        
            </apex:pageBlockSection>
        </apex:pageblock>
    </apex:form>
</apex:page>