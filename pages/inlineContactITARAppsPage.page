<apex:page standardController="Contact" extensions="InlineContactITARAppsExtCntr" showHeader="false" sidebar="false" action="{!validateAuthorization}">
    <script>
    function setFocusOnLoad() {}
    </script>
    <apex:form >
        <apex:pageMessages />
        <apex:outputPanel rendered="{!message != null && message != ''}">
            <font color="red" style="font-size:16px"><b>{!message}</b></font>
        </apex:outputPanel>
        <apex:outputPanel rendered="{!message == null && message == ''}">
            <apex:pageBlock title="ITAR Details" mode="edit" rendered="{!isedit}">
                <apex:pageBlockButtons location="top">
                    <apex:commandButton value="Save" action="{!Save}"/>
                    <apex:commandButton value="Cancel" action="{!cancel}"/>
                </apex:pageBlockButtons>
                <apex:pageblocksection collapsible="false" columns="1" >
					<apex:inputField value="{!con.ITAR_Access_Requested__c}" />
					<apex:inputField value="{!con.ITAR_Documents_Verified__c}" />
					<apex:inputField value="{!con.ITAR_Certified__c}" />
					<apex:inputField value="{!con.ITAR_Enabled_Date__c}" />
				</apex:pageblocksection>
            </apex:pageBlock>
            <apex:pageBlock title="ITAR Details" mode="view" rendered="{!NOT(isedit)}">
                <apex:pageBlockButtons location="top">
                    <apex:commandButton value="Edit" action="{!Edit}"/>
                </apex:pageBlockButtons>
                <apex:pageblocksection collapsible="false" columns="1" >
                	<apex:outputField value="{!con.ITAR_Access_Requested__c}" />
					<apex:outputField value="{!con.ITAR_Documents_Verified__c}" />
					<apex:outputField value="{!con.ITAR_Certified__c}" />
					<apex:outputField value="{!con.ITAR_Enabled_Date__c}" />
					<apex:outputLabel value="ITAR Case Number" styleClass="labelCol vfLabelColTextWrap" style="padding-left:72px;">
					<apex:outputLink target="_blank" value="/{!caseId}" style="padding-left:23px; font-size:12px;">{!con.ITAR_Case_Number__c}</apex:outputLink>
					</apex:outputLabel>
				</apex:pageblocksection>
            </apex:pageBlock>
        </apex:outputPanel>
        <br/>
        <br/>
        <br/>
        <apex:outputPanel rendered="{!disclaimer != null && disclaimer != ''}">
            <font color="green" style="font-size:14px"><b>{!disclaimer}</b></font>
        </apex:outputPanel>
    </apex:form>
</apex:page>