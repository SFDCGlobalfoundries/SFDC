<apex:page standardController="Tracked_Lot__c" sidebar="true" extensions="TrackedLotMassEditExtension">
    <apex:sectionHeader title="Tracked Lot Edit" subtitle="New Tracked Lot"/>
   
    <apex:pageMessages id="pageMessages"/>

    <apex:form >
        <apex:pageBlock >
            <apex:pageBlockButtons >
                <apex:commandButton value="Save" action="{!saveForNewRecord}" reRender="pageMessages"/>
                <apex:commandButton value="Cancel" action="{!Cancel}"/>
            </apex:pageBlockButtons>
            <apex:pageBlockSection >
                <apex:inputField value="{!Tracked_Lot__c.Lot_Tracker__c}"/>
                <apex:inputField value="{!Tracked_Lot__c.Manufacturing_Lot__c}"/>
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>