<apex:page controller="FMS_DocumentLinkController">
    <apex:sectionHeader title="Documents" subtitle="{!if(documentPage == 'StepPlan', 'Step Plan Education Package', 'Training Materials')}"/>
    <apex:pageBlock >
        <apex:pageBlockSection columns="1" >
            <apex:pageBlockTable value="{!documentList}" var="d" columns="3" align="center">
                <apex:column styleClass="inBorder">
                    <apex:facet name="header"><b>Link</b></apex:facet>
                    <apex:outputLink value="{!d.link}" target="_blank" title="{!d.name}">{!d.name}</apex:outputLink>
                </apex:column>      
                <apex:column styleClass="inBorder">
                    <apex:facet name="header"><b>File Type</b></apex:facet>
                    <apex:outputText >{!d.contentType}</apex:outputText>
                </apex:column>
                <apex:column styleClass="inBorder">
                    <apex:facet name="header"><b>Size</b></apex:facet>
                    <apex:outputText >{!d.size}</apex:outputText>
                </apex:column>
            </apex:pageBlockTable>
        </apex:pageBlockSection>
    </apex:pageBlock>
</apex:page>