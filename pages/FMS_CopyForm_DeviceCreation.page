<apex:page controller="FMS_CopyForm_DeviceCreation_Ctrl">
    <apex:form >
    	<apex:pageBlock >
        	<apex:pageBlockSection rendered="{!(AvailableDeviceList.size > 0)}">
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Available Devices:" />
                    <apex:selectOption >
                        <apex:selectList value="{!selectedDevice}" multiselect="false" size="1" id="pmryCnctList">
                            <apex:selectOptions value="{!AvailableDeviceList}"/>
                        </apex:selectList>
                    </apex:selectOption>
                </apex:pageBlockSectionItem>
                <apex:commandButton action="{!ContinueNext}" value="Continue" />
            </apex:pageBlockSection>
            <apex:pageBlockSection rendered="{!(AvailableDeviceList.size == 0)}">
                <apex:outputLabel value="No Devices Available, Create New Device ??" />
                <apex:commandButton action="{!createDevice}" value="create Device" />
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>