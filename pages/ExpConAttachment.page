        ARoy    06112013    - page creation.
-->
<apex:page standardController="Export_Control_Form__c" extensions="ExpConAttachController" showheader="false" sidebar="false">   
        <apex:pageBlock >        
            <apex:pageBlockTable value="{!expConAttch}" var="exp" width="100%" columns="2" columnsWidth="30%,70%" rendered="{!(NOT(ISNULL(expConAttch)) && ($UserRole.Name == 'GTC - Global Trade Compliance' || $Profile.Name =='System Administrator'))}">
                <apex:column >
                    <apex:facet name="header">{!$Label.Export_Control_Att_Name}</apex:facet>
                    <apex:outputLink value="{!URLFOR($Action.Attachment.Download, exp.Id)}" target="_blank">
                        <apex:outputText value="{!exp.Name}"/>
                    </apex:outputLink>
                </apex:column>
                <apex:column >
                    <apex:facet name="header">{!$Label.Export_Control_Att_Desc}</apex:facet>
                    <apex:outputText value="{!exp.Description}"/>               
                </apex:column>
            </apex:pageBlockTable>
            <apex:outputLabel value="{!$Label.Export_Control_No_Attachment}" styleClass="noRowsHeader" rendered="{!(ISNULL(expConAttch) && ($UserRole.Name == 'GTC - Global Trade Compliance' || $Profile.Name =='System Administrator'))}"></apex:outputLabel>
            <apex:outputLabel value="{!$Label.Export_Control_Att_Not_Auth}" styleClass="noRowsHeader" rendered="{!NOT($UserRole.Name == 'GTC - Global Trade Compliance' || $Profile.Name =='System Administrator')}"></apex:outputLabel>           
        </apex:pageBlock>
</apex:page>