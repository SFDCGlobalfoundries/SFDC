<apex:page standardController="Apttus_Proposal__Proposal__c" extensions="ConfigLaserscribe" showHeader="true">

    <apex:form >
    
    <apex:sectionHeader title="Select Frontside-Laserscribe" 
                            subtitle="Configurator Plus Frontside-Laserscribe"/> 
        
        <apex:pageBlock >
        
        <apex:pagemessages ></apex:pagemessages>
        <apex:outputPanel id="messages">
        
          <!-- Modified By: Prachi(23 May 2017), To dispaly message on UI based on BUMP Condition: START -->
          <apex:pageMessage rendered="{!isPolymideOpeningGF}" summary="{!$Label.Polyimide_Application_Location_MSG}" severity="info" strength="2"/>
          <apex:pageMessage rendered="{!isPolymideOpeningOSAT}" summary="{!$Label.Polyimide_Application_Location_OSAT_MSG}" severity="info" strength="2" />
          <apex:pageMessage rendered="{!isPackagingOptionFlipChip}" summary="{!$Label.PackagingOptionFlipChip}" severity="info" strength="2" />
          <!-- Modified By: Prachi, To dispaly message on UI based on BUMP Condition: END -->
        </apex:outputPanel>
        <apex:pageBlockButtons >
            <apex:commandButton value="Save" action="{!saveform}"/>
            <apex:commandButton value="Cancel" action="{!cancel}"/>
            <!--<apex:commandButton value="Edit" action="{!editFunction}" reRender="pbsection" rendered="{!showedit}"/>-->
        </apex:pageBlockButtons>
        <apex:pageblockSection columns="1" id="pbsection">
         
               
           <Label style="font-weight:bold;">Fronside-Laserscribe</Label>
            <apex:pageblocktable value="{!quesWrapper}" var="questions">
            
              <apex:column value="{!questions.questions}" headerValue="" / >
              <apex:column rendered="{!IF(questions.Picklistoptions != null,true,false)}">   
                 <apex:selectList value="{!questions.option}" size="1" style="width:172px" onchange="setOtherField()">
                        <apex:selectOptions value="{!questions.Picklistvalues}"></apex:selectOptions>
                    </apex:selectList>
                </apex:column>
               <!-- Display selectable options -->
                <apex:column rendered="{!IF(questions.Picklistoptions == null,true,false)}">  
                    <apex:inputText value="{!questions.option}" rendered="{!IF(questions.Picklistvalues == null,true,false)}" title="{!questions.range}" />
                    <apex:inputText value="{!questions.Picklistvalues[0]}" rendered="{!IF(questions.Picklistvalues != null,true,false)}"/>         
                </apex:column>
            
            </apex:pageblocktable>
            <apex:actionfunction name="setOtherField" action="{!setOtherField}"/>
          
           <apex:pageblocktable value="{!quesWrapper_new}" var="questions1">
                <apex:column value="{!questions1.questions}" headerValue="GLOBALFOUNDRIES Standard Settings" rendered="{!IF((isstandard=='false' && isfrontside=='true'),true,false)}"/ >
                 
                <apex:column rendered="{!IF((questions1.Picklistoptions != null && isstandard=='false' && isfrontside=='true'),true,false)}">            
                    <apex:selectList value="{!questions1.option}" size="1" style="width:172px">
                        <apex:selectOptions value="{!questions1.Picklistvalues}"  ></apex:selectOptions>
                    </apex:selectList>                   
                   
                </apex:column>
                 <!-- Display selectable options -->
                <apex:column rendered="{!IF((questions1.Picklistoptions == null && isstandard=='false' && isfrontside=='true'),true,false)}">            
                    <apex:inputText value="{!questions1.option}" rendered="{!IF((questions1.Picklistvalues == null && isstandard=='false' && isfrontside=='true'),true,false)}" title="{!questions1.range}"/>
                    <apex:inputText value="{!questions1.Picklistvalues[0]}" rendered="{!IF((questions1.Picklistvalues != null && isstandard=='false' && isfrontside=='true'),true,false)}"/>            
                </apex:column> 
               
            </apex:pageblocktable>
            '
            <apex:pageblocktable value="{!quesWrapper_new1}" var="questions2" >
                <apex:column value="{!questions2.questions}" headerValue="GLOBALFOUNDRIES Standard Settings default" rendered="{!IF((isstandard=='true' && isfrontside=='true'),true,false)}"/ >
                 
                <apex:column rendered="{!IF((questions2.Picklistoptions != null && isstandard=='true' && isfrontside=='true'),true,false)}" >            
                    <apex:selectList value="{!questions2.option}" size="1" style="width:172px" disabled="true">
                        <apex:selectOptions value="{!questions2.Picklistvalues}"  ></apex:selectOptions>
                    </apex:selectList>                   
                   
                </apex:column>
                 <!-- Display selectable options -->
                <apex:column rendered="{!IF((questions2.Picklistoptions == null && isstandard=='true' && isfrontside=='true'),true,false)}" >
                    <apex:inputText value="{!questions2.option}" disabled="true" rendered="{!IF((questions2.Picklistvalues == null && isstandard=='true' && isfrontside=='true'),true,false)}" title="{!questions2.range}"/>
                    <apex:inputText value="{!questions2.Picklistvalues[0]}" disabled="true" rendered="{!IF((questions2.Picklistvalues != null && isstandard=='true' && isfrontside=='true'),true,false)}"/>         
                </apex:column> 
               
            </apex:pageblocktable>
        </apex:pageblockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>