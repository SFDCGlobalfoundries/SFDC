<apex:page standardController="Team_Room__c" tabStyle="Team_Room__c" extensions="TeamRoomExtension" >
    <script>
     var taskWin=null;
     function openTaskPopup(id) {
        var url="/apex/TaskEdit?what_id=" + id;
        taskWin=window.open(url, 'Popup','height=500,width=750,left=100,top=100,resizable=no,scrollbars=yes,toolbar=no,status=no');
        if (window.focus) {
          taskWin.focus();
        }
        
         return false;
     }
           
     function closeTaskPopup() {
        if (null!=taskWin) {
           taskWin.close();
        } 
     }
    </script>

    <div style="font-size:20px">Team Room: <span style="font-size:20px;font-weight:bold;">{!Team_Room__c.name}</span></div>
    <chatter:feedWithFollowers entityId="{!Team_Room__c.id}"/>  
    <apex:pageBlock >
        <apex:pageBlockSection title="Calendar" collapsible="true" columns="1">
            <apex:include pageName="TeamRoomCalendar"/>
        </apex:pageBlockSection>
        <apex:pageBlockSection title="Meeting Minutes" collapsible="true" columns="1">
            <apex:relatedList list="Team_Room_Meeting_Minutes__r" />
        </apex:pageBlockSection>
        <apex:pageBlockSection title="Open Activities" collapsible="true" columns="1">
            <apex:relatedList title="" subject="{!Team_Room__c}" list="OpenActivities" />
        </apex:pageBlockSection>
        <apex:pageBlockSection title="Members" collapsible="true" columns="1">
            <apex:include pageName="TeamRoomMembers"/>
        </apex:pageBlockSection>        
        <apex:pageBlockSection title="Activity History" collapsible="true" columns="1">
            <apex:relatedList title="" subject="{!Team_Room__c}" list="ActivityHistories" />
        </apex:pageBlockSection>
        <apex:pageBlockSection title="Notes and Attachments" collapsible="true" columns="1">
            <apex:relatedList title="" subject="{!Team_Room__c}" list="NotesAndAttachments" />
        </apex:pageBlockSection>
    </apex:pageBlock>
</apex:page>