<apex:page standardController="SFDC_Project_Issue__c" tabStyle="SFDC_Project__c" showChat="false" sidebar="false">
<apex:form >
<apex:pageBlock title="Issue or Risk Details" >
<apex:pageBlockButtons >
    <apex:commandButton action="{!Edit}"  value="Edit"/>
    <apex:commandButton action="{!Delete}"  value="Delete"/>
    
</apex:pageBlockButtons>
<apex:pageBlockSection columns="2">
<apex:outputField value="{!SFDC_Project_Issue__c.SFDC_Project__c}"/>
<apex:outputField value="{!SFDC_Project_Issue__c.name}"/>

<apex:outputField value="{!SFDC_Project_Issue__c.Description__c}"/>
<apex:pageBlockSectionItem ></apex:pageBlockSectionItem>
<apex:outputField value="{!SFDC_Project_Issue__c.Severity__c}"/>
<apex:outputField value="{!SFDC_Project_Issue__c.Impacts__c}"/>
<apex:outputField value="{!SFDC_Project_Issue__c.Status__c}"/>

  <apex:outputField rendered="{!SFDC_Project_Issue__c.Status__c == 'Open'}" value="{!SFDC_Project_Issue__c.Close_By_Date__c}"/>
  <apex:outputField rendered="{!SFDC_Project_Issue__c.Status__c == 'On Hold'}" value="{!SFDC_Project_Issue__c.Resume_By_Date__c}"/>

<apex:outputField value="{!SFDC_Project_Issue__c.Owner__c}"/>
<apex:outputField value="{!SFDC_Project_Issue__c.Consequences__c}"/>
<apex:outputField value="{!SFDC_Project_Issue__c.Solution__c}"/>

<apex:outputField value="{!SFDC_Project_Issue__c.Type__c}"/>
<apex:outputField label="Created By" value="{!SFDC_Project_Issue__c.CreatedBy.Name}"/>
<apex:outputField label="Last Modified By" value="{!SFDC_Project_Issue__c.LastModifiedBy.Name}"/>
</apex:pageBlockSection>



</apex:pageBlock>  
</apex:form>

<apex:relatedList subject="{!SFDC_Project_Issue__c}" list="NotesAndAttachments" />
 

</apex:page>