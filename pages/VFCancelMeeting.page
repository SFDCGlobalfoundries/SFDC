<apex:page standardController="Team_Room_Meeting__c" extensions="ClsCancelMeetingController">

<apex:sectionHeader title="Team Room Meeting Detail Edit" subtitle="Team Room Meeting Detail" />

<apex:form >

    <apex:pageBlock title="Team Room Meeting Detail" mode="Edit">
    
        <apex:pageBlockButtons >
            <apex:commandButton action="{!cancelMeeting}" value="Confirm" />
            <apex:commandButton value="Cancel" action="{!cancel}" id="cancelButton" />
        </apex:pageBlockButtons>
        
        <apex:pageMessages escape="false"/>

        <apex:pageBlockSection title="Team Room Meeting Detail" collapsible="false" columns="1">
                <apex:outputText value="{!Team_Room_Meeting__c.Name}" /> 
                <apex:outputText value="{!Team_Room_Meeting__c.Team_Room__r.Name}" />                 
                <apex:outputField value="{!Team_Room_Meeting__c.Start_DateTime__c}"/>
                <apex:outputField value="{!Team_Room_Meeting__c.End_DateTime__c}"/>
                <apex:outputText value="{!Team_Room_Meeting__c.Subject__c}" /> 
                <apex:outputText value="{!Team_Room_Meeting__c.Status__c}" /> 
                <apex:outputText value="{!Team_Room_Meeting__c.Description__c}"/>
        </apex:pageBlockSection>

    </apex:pageBlock> 

</apex:form>

</apex:page>