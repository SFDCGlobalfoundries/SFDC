<apex:page standardController="Wafer_Allocation__c" extensions="WaferAllocationExtension">
    
    <apex:form id="theform" >
    
        <apex:pageMessages id="error" />
        
        <apex:pageBlock id="searchblock">
        
                <apex:pageBlockButtons >
                    <apex:commandButton value="Save" action="{!Save}"/>
                    <apex:commandButton value="Cancel" action="{!cancel}"/>                  
                </apex:pageBlockButtons>
                
                <apex:pageBlockSection columns="2">
                    <apex:outputField id="fab" value="{!waferAllocation.Fab__c}" />
                    <apex:outputField value="{!waferAllocation.Year__c}" />
                </apex:pageBlockSection>
                
                <apex:pageBlockSection >
                    <apex:outputField value="{!waferAllocation.Month__c}" />
                </apex:pageBlockSection>
                
                <apex:pageBlockSection >
                    <apex:outputField value="{!waferAllocation.Module1__c}" rendered="{!waferAllocation.Fab__c == 'FAB 3E' || waferAllocation.Fab__c == 'FAB 7'}"/>
                    <apex:outputField value="{!waferAllocation.Program1__c}" rendered="{!waferAllocation.Fab__c == 'FAB 7'}"/>
                </apex:pageBlockSection>
                   
                <apex:pageBlockSection id="quantity" columns="2">
                    <apex:inputField value="{!waferAllocation.Wafer_Quantity_Allocated__c}" />
                    <apex:outputField value="{!waferAllocation.Remaining_Quantity__c}" />
                </apex:pageBlockSection>

        </apex:pageBlock>
        
    </apex:form>
    
</apex:page>