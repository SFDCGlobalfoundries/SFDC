<apex:page standardController="Wafer_Allocation__c" extensions="WaferAllocationExtension" tabStyle="Wafer_Allocation__tab">
    <apex:form >
        <apex:sectionHeader title="{!$ObjectType.Wafer_Allocation__c.Label}" subtitle="{!waferAllocation.Name}" />
        <apex:pageBlock >
            <apex:pageBlockButtons >
                <apex:commandButton value="Edit" action="{!EditOnViewPage}"/>
                <!--<apex:commandButton value="Delete" action="{!DeleteRecord}"/>-->
                <apex:commandButton value="Back" action="{!Back}"/>
            </apex:pageBlockButtons>
            
            <apex:pageBlockSection columns="2">
                <apex:outputField value="{!waferAllocation.Fab__c}"/>
                <apex:outputField value="{!waferAllocation.Year__c}"/>
            </apex:pageBlockSection>
            
            <apex:pageBlockSection >
                <apex:outputField value="{!waferAllocation.Month__c}"/>
            </apex:pageBlockSection>
                       
            <apex:pageBlockSection >
                <apex:outputField value="{!waferAllocation.Module1__c}" rendered="{!waferAllocation.Fab__c == 'FAB 3E' || waferAllocation.Fab__c == 'FAB 7'}"/>
                <apex:outputField value="{!waferAllocation.Program1__c}" rendered="{!waferAllocation.Fab__c == 'FAB 7'}"/>
            </apex:pageBlockSection>
            
            <apex:pageBlockSection collapsible="false" columns="2">
                <apex:outputField value="{!waferAllocation.Wafer_Quantity_Allocated__c}"/>
                <apex:outputField value="{!waferAllocation.Remaining_Quantity__c}"/>
            </apex:pageBlockSection>
            
        </apex:pageBlock>
        
        <apex:pageBlock >
            <apex:pageBlockTable value="{!historyList}" var="item" id="historylist">
                <apex:column value="{!item.Field}" id="field"/>
                <apex:column value="{!item.NewValue}" id="newValue"/>
                <apex:column value="{!item.OldValue}" id="oldValue"/>
                <apex:column value="{!item.CreatedById}" id="createdId"/>
                <apex:column value="{!item.CreatedDate}" id="createdDate"/>
            </apex:pageBlockTable>
            
        </apex:pageBlock>
    </apex:form>
    
</apex:page>