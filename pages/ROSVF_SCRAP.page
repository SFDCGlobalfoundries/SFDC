<apex:page controller="ROS_ControllerSearchReticleGFForm"  showheader="{!IF((UserType!= 'Customer'), True, False)}" sidebar="false">
    <apex:includeScript value="{!URLFOR($Resource.ROS_JQuery_Deafult, '/jquery-ui-1.10.3.custom/js/jquery-1.9.1.js')}"/>
    <apex:includeScript value="{!URLFOR($Resource.ROS_JQuery_Deafult, '/jquery-ui-1.10.3.custom/js/jquery-ui-1.10.3.custom.js')}"/>
    <apex:stylesheet value="{!URLFOR($Resource.ROS_JQuery_Deafult, '/jquery-ui-1.10.3.custom/css/smoothness/jquery-ui-1.10.3.custom.css')}"/>
    <script>
        function closeDialog(){
                 $( "#ipDialog" ).dialog( "close" );
        }
    </script>
    <style>
        .ui-widget-overlay{
            opacity: .9;
        }
    </style>
    
    <apex:sectionHeader title="Customer Feedback"/>
    
    <apex:form id="form1">
        <apex:pageBlock id="Reticles" title="Selected Reticles">
            <apex:PageMessages id="returnmessages" />
            <apex:pageBlockButtons id="returnButtons" location="bottom">
                <!--changing the label of button as per Task-739 -->
                <apex:commandButton value=" Confirm Scrap " action="{!performScrap}"/>
                <apex:commandButton value=" Cancel " action="{!cancel}"/>
            </apex:pageBlockButtons>
            <apex:outputPanel id="selectedReticles">
                <apex:pageBlockTable id="sReticles" Value="{!SelReturnReticles}" var="var" >
                    <apex:column >
                        <apex:facet name="header">
                            <apex:inputCheckbox onclick="checkAll(this,'checkedone')" value="{!Allselected}"/>         
                        </apex:facet>        
                        <apex:inputCheckbox value="{!var.IsChecked}" id="checkedone" />
                    </apex:column>
                    <apex:column value="{!var.eachSelectedreticlewrapper.Account__c}" />
                    <apex:column value="{!var.eachSelectedreticlewrapper.Name}"/>                    
                    <apex:column value="{!var.eachSelectedreticlewrapper.GlobalFoundries_Device_ID__c}"/>
                    <apex:column value="{!var.eachSelectedreticlewrapper.Device_ID__c}"/>
                    <apex:column value="{!var.eachSelectedreticlewrapper.Day_Inactive__c}"/>
                    <apex:column value="{!var.eachSelectedreticlewrapper.ROS_Cycle__c}"/>
                    <!--Commenting the column as per Task-739 -->
                    <!--<apex:column value="{!var.eachSelectedreticlewrapper.ROS_Status__c}"/>-->
                </apex:pageBlockTable>
            </apex:outputPanel> 
        </apex:pageBlock>
    </apex:form>
    <script type="text/javascript">
    function checkAll(cb,cbid){
            var inputElem = document.getElementsByTagName("input");                    
            for(var i=0; i<inputElem.length; i++)
            {            
                 if(inputElem[i].id.indexOf(cbid)!=-1){                                       
                    inputElem[i].checked = cb.checked;
                }
            }
    }
    </script> 
</apex:page>