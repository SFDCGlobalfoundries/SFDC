<apex:page standardController="MRS__c" extensions="MRSCustomerFrameMockupReviewExtn"  showHeader="false" sideBar="false" standardStylesheets="false" 
contentType="application/vnd.ms-excel#MRSFrameMockup.xls" cache="true" renderas="">

<apex:form >
        <table>
            <apex:outputLabel rendered="{!customerOrFoundary}">
                <tr align="center"><td colspan="5"><h2><u>Frame Mockup Review - Customer</u></h2></td></tr>
            </apex:outputLabel>
            <apex:outputLabel rendered="{!!customerOrFoundary}">
                <tr align="center"><td colspan="5"><h2><u>Frame Mockup Review - Foundry</u></h2></td></tr>
            </apex:outputLabel>
        </table>
        <br/>
       <table border="1">
           <tr>
                <th><b>Customer Name:</b></th>
                <td >{!IF(customerNameAfterSave != null,customerNameAfterSave,account_idmap[selectedCustomer])}</td>
           </tr>
           <tr>
                <th><b>Mask Set Title:</b></th>
                <td >{!IF(mstNameAfterSave!= null,mstNameAfterSave,IDMstNameMap[selectedmst])}</td>
            </tr>
             <apex:outputLabel rendered="{!IF(selectedMaskLayer != null,true,false)}">
                <tr>
                    <th><b>Mask Layer</b></th>
                    <td >{!selectedMaskLayer}</td>
                </tr>
            </apex:outputLabel>
            
            <apex:outputLabel rendered="{!IF(selectedLayerStatus != null,true,false)}">
                <tr>
                    <th><b>Layer Status</b></th>
                    <td >{!selectedLayerStatus}</td>
                </tr>
            </apex:outputLabel>
             <apex:outputLabel rendered="{!IF(selectedDeviceId != null,true,false)}">
                <tr>
                    <th><b>Device ID</b></th>
                    <td >{!selectedDeviceId}</td>
                </tr>
            </apex:outputLabel>
            <apex:outputLabel rendered="{!IF(selectedFrameStatus != null,true,false)}">
                <tr>
                    <th><b>Frame Status</b></th>
                    <td >{!selectedFrameStatus}</td>
                </tr> 
            </apex:outputLabel>
       </table>
       <br/>
        <table border="1">
            <thead>
                <tr align="center">
                    <th class="tcell_width_25">No.</th>
                    <th class="tcell_width_80">PTRF</th>
                    <apex:outputLabel rendered="{!reticleType}">
                        <th class="tcell_width_75">Tech Geo</th>
                    </apex:outputLabel>
                    <th class="tcell_width_75">Frame Status</th>
                </tr>
            </thead>
            <tbody>
                <apex:repeat value="{!lstframeTableWrapper}" var="frame">
                 <tr align="center">
                     <td class="text-align-centre">{!frame.srlNo}</td>
                     <td>{!frame.ptrf}</td>
                     <apex:outputLabel rendered="{!reticleType}">
                         <td>{!frame.techGeo}</td>
                     </apex:outputLabel>
                     <td>{!frame.status}</td>
                 </tr>
                </apex:repeat>
            </tbody>
        </table>
</apex:form>


</apex:page>