<apex:page standardController="Apttus_Proposal__Proposal__c"  extensions="ConfiguratorPlusAdditionalReqController">
<apex:sectionHeader title="Select Additional Requirement" 
                        subtitle="Configurator Plus Additional Requirement"/> 
                        
    <apex:form >
       
        <apex:pageBlock >
            <apex:pageblockButtons >
                <apex:commandButton value="Save" action="{!saveform}"/>
                <apex:commandButton value="Cancel" action="{!cancel}"/>
            </apex:pageblockButtons>
            <apex:pageBlocksection >
                <!-- Input fields -->
                <apex:inputField value="{!app.Is_there_gap_req_in_Layer_Map_Table__c}" label="Is there a gap/changes required in Layer Mapping Table ?" rendered="true"/>
                <apex:inputField value="{!app.Any_other_Special_Requirements__c}" label="Any other Special Requirements"/>
                <apex:inputField value="{!app.DMOS_Type__c}" label="DMOS Type?"/>   
                <apex:inputField value="{!app.Additional_Scribeline_Dropin_Req__c}" label="Additional Scribeline/Dropin Requirement?"/>
                <apex:inputField value="{!app.Other_Special_Requirements__c}"  label="Other Special Requirements?  "/>  
                <apex:inputField value="{!app.Backgrind_Thickness__c}"  label="Backgrind Thickness" id="Backgrind"/> 
                <apex:inputField value="{!app.Special_test_structure_placement__c}"  label="Special test structure placement" />
                <apex:inputField value="{!app.BEOL_stack_Not_offered_by_DM__c}"  label="BEOL stack (Not offered by DM)" />
                <apex:inputField value="{!app.SRAM_cell_Not_offered_by_DM__c}"  label="SRAM cell (Not offered by DM)" />
                <apex:inputField value="{!app.Speed_push_Not_offered_by_DM__c}"  label="Speed-push (Not offered by DM)" />
                <apex:inputField value="{!app.Request_for_special_chip_arrangement__c}"  label="Request for special chip arrangement" />
                <apex:inputField value="{!app.Metal_Wall_Seal_Ring_NotPartOfCustProd__c}"  label="Metal Wall/Seal Ring(NotPartOfCustProd)" />
                <apex:inputField value="{!app.Dicing_dependency__c}"  label="Dicing dependency(wafer back grind thik)" />
                <apex:inputField value="{!app.Special_illumination_field_usage__c}"  label="Special illumination field usage" />
                <!-- Dropn in features -->
                <apex:inputField value="{!app.Drop_in_Required__c}" label="Drop-in Required?" rendered="{!If(DropinFlag == 'true',true,false)}"  />           
            </apex:pageBlocksection>
        </apex:pageBlock>
    </apex:form> 
</apex:page>