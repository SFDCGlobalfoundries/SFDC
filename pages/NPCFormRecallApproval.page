<apex:page id="NPCFormRecallApproval" standardController="New_Part_Creation_Form__c" extensions="NPCFormRecallApprovalController" sidebar="true" showHeader="true">
	<apex:form >
        <apex:sectionHeader title="Recall Approval Request" subtitle="{!npcForm.Name}" help="https://help.salesforce.com/htviewhelpdoc?id=co_edit.htm&siteLang=en_US" />
        <apex:pagemessages />
        <apex:outputPanel id="thePanel" layout="inline">Please enter comments to remove this object from the approval process</apex:outputPanel>
        <apex:pageBlock title="Recall Approval Request" >            
            <apex:pageBlockSection columns="2" collapsible="false">
                <apex:outputField value="{!npcForm.Name}" label="Related To" />                
                <apex:outputField value="{!npcForm.CreatedBy.Name}" label="Created By" />
                                
                <apex:inputTextarea value="{!comments}" label="Comments" style="width:100%" />
            </apex:pageBlockSection>
        
            <apex:pageBlockButtons id="buttonsBlock">
                <apex:commandButton value="Recall Approval Request" action="{!recallApproval}" />
                <apex:commandButton value="Cancel" action="{!cancelNPC}" />
            </apex:pageBlockButtons>
        </apex:pageBlock>
    </apex:form>
</apex:page>