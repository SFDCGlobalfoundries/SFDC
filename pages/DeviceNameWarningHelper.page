<apex:page standardController="Device__c">
    <head>
        
    
    <style>
    .isa_warning {
        color: #ff8b28;

    }
    </style>
    <script>
    function showmessage(){
        var name='{!device__c.Name}';
        console.log(document);
        if(name.startsWith("SL"))document.getElementById('sl').style.display='block';
        if(name.startsWith("PC"))document.getElementById('pc').style.display='block';
        console.log('{!TEXT($User.Usertype)}');
        if({!NOT(ISPICKVAL($User.Usertype,'Standard'))}){
            window.parent.document.getElementById('section_header').style.display='none';
            window.parent.document.getElementById('chatterfeedshell').style.display='none';
        }
        
        }
        
        window.onload = function(e){ showmessage(); 
}
   
    </script>
        </head>
    <body style="background-color:#fff !important;">
        
    
    <div style="margin:auto;">
        
        <apex:outputpanel rendered="{!IF(Device__c.Stage__c=='Design In',true,false)}">
            <div class="isa_warning" id="sl" style="display:none;font-weight:bold;">
            Warning: "SL" is reserved for tapeout with submission reason as "Short Loop". Please re-enter Device ID if tapeout is not Short Loop.
            </div>
            <div class="isa_warning" id="pc" style="display:none;font-weight:bold;">
            Warning: "PC" is reserved for tapeout with submission reason as "Probe Card". Please re-enter Device ID if tapeout is not Probe Card.
            </div>
        </apex:outputpanel>
    </div>
        </body>
</apex:page>