<apex:page controller="RTATMilestoneAdjustment" sidebar="true" >
    <head>
      <style>
      .odd { 
        background-color: #FCF7F7;
      }
    .even {
        background-color: #E3DCDB;
    }
   </style>
  </head>
   <apex:form >
    <apex:pageBlock title="Wafer Fab Schedule Inputs">
      <apex:pageBlockSection >
       <apex:pageMessages >
       </apex:pageMessages>
      </apex:pageBlockSection>     
   <apex:pageBlockSection title="TAT Adjustments" columns="1">
    <apex:pageBlockTable value="{! milestones }" var="TAT" id="TATAdjustTable" columnsWidth="10%, 25%, 25%, 10%, 10%, 10%, 10%" rowClasses="even,odd">
        <apex:column headerValue="Parent" value="{!TAT.Parent_Waf_Fab_Schedule__c}"/>
        <apex:column value="{!TAT.Process__c}" />
        <apex:column value="{!TAT.Subprocess__c}" />
        <apex:column value="{!TAT.Subprocess_TAT__c}"/>
        <apex:column value="{!TAT.Total_TAT__c}" />
         <apex:column value="{!TAT.End_Date__c}" style="" />
         <apex:column headerValue="Add days">
             <apex:inputField value="{!TAT.addDays__c}" rendered="{!TAT.Adjustable_TAT__c}" />
         </apex:column>                             
        
    </apex:pageBlockTable>  
    </apex:pageBlockSection>
        <apex:pageBlockButtons >
            <apex:commandButton action="{! adjust }" value="Adjust Days" />    
        </apex:pageBlockButtons>
    </apex:pageBlock>
    </apex:form> 
</apex:page>