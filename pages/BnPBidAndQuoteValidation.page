<apex:page controller="BnPButtonValidationCtrl" action="{!checkButtonValidation}">
<apex:form >
    <apex:pageMessages escape="false"/>
    <apex:pageBlock >
        <apex:pageBlockTable value="{!wrapList}" var="wrpl">
                <apex:column >
                    <apex:facet name="header" >Link to Record
                    </apex:facet>
                    <apex:outputLink value="/{!wrpl.recId}" id="theLink" target="_blank">{!wrpl.recName}</apex:outputLink>
                </apex:column>
                <apex:column >
                    <apex:facet name="header" >Field Name
                    </apex:facet>
                <apex:outputlabel value="{!wrpl.fieldlabel}" / >
                </apex:column>
         </apex:pageBlockTable>
     <apex:commandButton value="Ok" action="{!rfiPageRedirection}" rerender="form"
     status="LoadingStatus" onclick="if(!confirm('Are you sure you want to create RFI Record?')){return false};"/>
    <apex:commandButton action="{!cancel}" value="Cancel"/>
    </apex:pageBlock>
</apex:form>
</apex:page>