<apex:page standardController="CuSR_Cost__c"
	extensions="CuSRNewEditCostInfoExtension" tabStyle="CuSR_Form__c">

	<style>
.customLink {
	text-decoration: none;
	color: #015ba7;
	font-family: 'Verdana', 'Geneva', sans-serif;
	font-size: 91.3%;
}
</style>

	<apex:form >
		<apex:sectionHeader title="{!$ObjectType.CuSR_Cost__c.label}"
			subtitle="{!cusrCost.Name}" />
		<apex:commandLink value="Back to CuSR Form {!cusrForm.Name}"
			styleClass="customLink" action="{!Cancel}"/>
        &nbsp;
        <apex:pageBlock >
			<apex:pageblockButtons location="top" rendered="{!cusrCost.Voided__c== false && disableEditDelete == false && cusrForm.Status__c != 'Void'}">
				<apex:commandButton value="Edit"  action="/apex/CuSRNewEditCostInfo?Id={!cusrCost.Id}"/>
				<apex:commandButton value="Delete" action="{!DeleteCost}"/>
			</apex:pageblockButtons>
			<apex:pageBlockSection collapsible="false">
				<apex:outputField value="{!cusrCost.Implementation_Comments__c}" />
				<apex:outputField value="{!cusrCost.Implementation__c}" />
				<apex:outputField value="{!cusrCost.Fab__c}" />
				<br/>
				<apex:outputField value="{!cusrCost.Labour_Cost__c}" />
				<apex:outputField value="{!cusrCost.Labour_Hours__c}" />
				<apex:outputField value="{!cusrCost.Comments_Labour_Cost__c}" />
				<apex:outputField value="{!cusrCost.Hardware_Cost__c}" />
				<apex:outputField value="{!cusrCost.Comments_Hardware_Cost__c}" />
				<apex:outputField value="{!cusrCost.Software_Cost__c}" />
				<apex:outputField value="{!cusrCost.Comments_Software_Cost__c}" />
				<apex:outputField value="{!cusrCost.Other_Cost__c}" />
				<apex:outputField value="{!cusrCost.Comments_Other_Cost__c}" />
			</apex:pageBlockSection>
		</apex:pageBlock>
		<c:GenericHistoryComponent Limit="20" Object="{!CuSR_Cost__c}"/>
	</apex:form>
</apex:page>