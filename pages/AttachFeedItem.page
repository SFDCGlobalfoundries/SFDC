<apex:page controller="AttachFeedItemController" showHeader="false" sidebar="false">
    <apex:sectionHeader title="Certificates" subtitle="Attachments"/>
    <apex:form >
        <apex:pageBlock >
            <apex:actionstatus id="counterStatusFun">
                <apex:facet name="start">
                    <div class="waitingSearchDiv" id="el_loading" style="background-color: #fbfbfb; height:100%;opacity:0.65;width:100%;">
                        <div class="waitingHolder" style="top: 100px; width: 91px;">
                            <img class="waitingImage" src="/img/loading.gif" title="Please Wait..." />
                            <span class="waitingDescription">Loading...</span>
                        </div>
                    </div>
                </apex:facet>
            </apex:actionstatus>
            <apex:pageBlockSection title="Certificates" columns="1">
                <apex:pageMessage summary="Please upload attachment here. The attachment will be saved once Save button is clicked."
                            severity="info" strength="2" />
                <apex:inputFile value="{!fileBody1}" fileName="{!fileName1}"
                    title="Attach here" />
                <apex:inputFile value="{!fileBody2}" fileName="{!fileName2}"
                    title="Attach here" />
                <apex:inputFile value="{!fileBody3}" fileName="{!fileName3}"
                    title="Attach here" />
                <apex:inputFile value="{!fileBody4}" fileName="{!fileName4}"
                    title="Attach here" />
                <apex:inputFile value="{!fileBody5}" fileName="{!fileName5}"
                    title="Attach here" />
                     <apex:inputFile value="{!fileBody6}" fileName="{!fileName6}"
                    title="Attach here" />
                <apex:inputFile value="{!fileBody7}" fileName="{!fileName7}"
                    title="Attach here" />
                <apex:inputFile value="{!fileBody8}" fileName="{!fileName8}"
                    title="Attach here" />
                <apex:inputFile value="{!fileBody9}" fileName="{!fileName9}"
                    title="Attach here" />
                <apex:inputFile value="{!fileBody10}" fileName="{!fileName10}"
                    title="Attach here" />
            </apex:pageBlockSection>
            <apex:pageBlockButtons >
                <apex:commandButton action="{!saveAttachment}" value="Save" status="counterStatusFun"/>
                
                <input type="Button"  href="#" name="Cancel" value="Cancel" onclick="history.go(-1)"/>
            </apex:pageBlockButtons>
        </apex:pageBlock>
    </apex:form>
</apex:page>