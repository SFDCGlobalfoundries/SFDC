                <apex:outputField value="{!mpwCustomerGuide.Expedite__c}" rendered="{!NOT(EditExpedite)}" />
                
                <apex:inputField value="{!mpwCustomerGuide.ShortLoop_Wafer__c}" rendered="{!EditShort}"/>
                <apex:outputField value="{!mpwCustomerGuide.ShortLoop_Wafer__c}" rendered="{!NOT(EditShort)}" />
                
                <apex:inputField value="{!mpwCustomerGuide.Adder3__c}" rendered="{!EditAdder3}"/>
                <apex:outputField value="{!mpwCustomerGuide.Adder3__c}" rendered="{!NOT(EditAdder3)}" />
                
                <apex:inputField value="{!mpwCustomerGuide.ExtraDice_B__c}" rendered="{!EditExtraDice}"/>
                <apex:outputField value="{!mpwCustomerGuide.ExtraDice_B__c}" rendered="{!NOT(EditExtraDice)}" />
                
                <apex:inputField value="{!mpwCustomerGuide.RecticalSpace_A1__c}" rendered="{!EditReticleSpaceA1}"/>
                <apex:outputField value="{!mpwCustomerGuide.RecticalSpace_A1__c}" rendered="{!NOT(EditReticleSpaceA1)}" />
                
                <apex:inputField value="{!mpwCustomerGuide.ReticleSpace_Min__c}" rendered="{!EditReticleSpaceMin}"/>
                <apex:outputField value="{!mpwCustomerGuide.ReticleSpace_Min__c}" rendered="{!NOT(EditReticleSpacemin)}" />
                
            </apex:pageBlockSection>
