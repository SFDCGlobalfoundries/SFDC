                        </apex:selectList>                          
                </apex:pageBlockSectionItem>
                <apex:outputField value="{!mpwCustomerGuide.TechNodes__c}" rendered="{!NOT(EditTechNode)}" />
                
                <apex:inputField value="{!mpwCustomerGuide.Sub_Devices_Extraction__c}" rendered="{!EditSubDevice}"/>
                <apex:outputField value="{!mpwCustomerGuide.Sub_Devices_Extraction__c}" rendered="{!NOT(EditSubDevice)}" />
                
                <apex:inputField value="{!mpwCustomerGuide.Option2__c}" rendered="{!EditOption}"/>
                <apex:outputField value="{!mpwCustomerGuide.Option2__c}" rendered="{!NOT(EditOption)}" />
                
                <apex:inputField value="{!mpwCustomerGuide.Wafer_Form_Delivery__c}" rendered="{!EditWafer}"/>
                <apex:outputField value="{!mpwCustomerGuide.Wafer_Form_Delivery__c}" rendered="{!NOT(EditWafer)}" />
                
