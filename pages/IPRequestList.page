<apex:page controller="IPRequestListCntrlr" cache="false" showHeader="true" sidebar="false" tabstyle="IP_Request__c">
    <apex:pageBlock title="New IP Request List">
        <apex:pageblockButtons location="top">
            <apex:outputLink value="/{!$ObjectType.IP_Request__c.keyPrefix}/e" target="_self" styleClass="btn" style="text-decoration:none">
              New IP Request
            </apex:outputLink>
        </apex:pageblockButtons>
        <apex:outputpanel layout="block" style="overflow:auto;height:250px">
            <apex:pageBlockTable value="{!recordList.IPs}" var="i">
                <apex:repeat value="{!$ObjectType.IP_Request__c.FieldSets.IP_Request_List}" var="r">
                    <apex:column headerValue="{!r.label}" rendered="{!AND(r.label = 'IP Request Name')}">
                        <apex:outputLink target="_blank" value="/{!i.id}" >{!i[r]}</apex:outputLink>
                    </apex:column>
                    <apex:column headerValue="{!r.label}" value="{!i[r]}" rendered="{!AND(NOT(r.label = 'IP Request Name'))}"/>              
                </apex:repeat>
            </apex:pageBlockTable>
        </apex:outputpanel>        
    </apex:pageBlock>
    <apex:pageBlock title="New IP Request Status Chart">
        <apex:chart height="200px" width="500px" data="{!recordChart.dataList}">
            <apex:axis type="Numeric" position="left" fields="counter" title="Record count" grid="true" minimum="0" maximum="{!recordList.IPs.size + 10}"/>
            <apex:axis type="Category" position="bottom" fields="name" title="Status"/>
            <apex:barSeries orientation="vertical" axis="left" xField="name" yField="counter"/>
        </apex:chart>
    </apex:pageBlock>    
</apex:page>