<apex:page sidebar="false" showHeader="false" renderAs="pdf" Controller="ROS_GenerateScrapController">
<html>
            <style>            
                .table1 {border-collapse:collapse;}
                .table1,td,th{border:1px solid black;}
            </style>
            </html>
            
            <table width="780px" border="0" cellspacing="2" cellpadding="2" align="center">
            <tr>
            <td width="50px"> Confidential</td>
            <td width="480px"></td>
            <td width="250px"> <apex:image value="{!$Resource.ROSGFlogo}"/></td>
            </tr>            
            </table>   
            
    <html>
    
    <center><b>{!ScrappingCompany}</b></center><br></br>
    <center><b>{!ScrappingCompanyAddress}</b></center><br></br>

        <body>
        <apex:pageBlock >
        <div id="divContainer">
            <table class="table1" cellspacing="2" cellpadding="2">
            <b>Certificate Number:</b>
            <apex:outputText >
                {!CertificateRecord.Name}
            </apex:outputText>
              <br></br>
            <b>Scrap Date:</b>
            <apex:outputText value="{0,date,dd.MM.yyyy 'at' HH:mm:ss z}">
                <apex:param value="{!CertificateRecord.Scrap_Date__c}"/>
            </apex:outputText>
          
   
         <br></br>
        <br></br>
            <!-- TABLE HEADER-->
                <thead>
                    <tr>
                        <th style="background-color:#F8F8F8; text-align:left;font-family:Sans-serif" scope="col" colspan="1" width="5%">S.No</th>
                        <th style="background-color:#F8F8F8; text-align:left;font-family:Sans-serif" scope="col" colspan="1" width="30%">Name</th>
                        <th style="background-color:#F8F8F8; text-align:left;font-family:Sans-serif" scope="col" colspan="1" width="50%">Reticle Id</th>
                    </tr>
                </thead>
                <tbody>
                     <apex:variable value="{!1}" var="rowNum"/>
                     <apex:repeat value="{!LScrapReticles}" var="eachreticle" id="selectedlist">
                    <tr>
                        <td class="dataCell" valign="top" width="5%"><apex:outputText value="{!FLOOR(rowNum)}"/></td>
                        <td class="dataCell" valign="top" width="30%"><apex:outputField value="{!currentRecord.Name}"/></td>
                        <td class="dataCell" valign="top" width="50%"><apex:outputField value="{!eachreticle.Name}"/></td>
                    </tr>
                    <apex:variable var="rowNum" value="{!rowNum + 1}"/>
                    </apex:repeat>
                </tbody>
            </table>
        </div>
        <br></br>
        <br></br>
        <b>Authorized By Name:</b> {!AuthorizedUser}<br></br>
        <b>Designation</b>       : {!CertificateRecord.Designation__c}
    </apex:pageBlock>
           </body>
    </html>
</apex:page>