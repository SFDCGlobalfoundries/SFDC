<apex:page standardController="MRS__c" extensions="MRSCustomerFrameMockupReviewExtn"  showHeader="false" sideBar="false" standardStylesheets="false" 
contentType="application/pdf#DRTDetails.pdf"  renderAs="PDF" cache="true">
<apex:form >
    <table>
       <apex:outputLabel rendered="{!customerOrFoundary}">
                <tr align="center"><td colspan="5"><h2><u>Frame Mockup Review - Customer</u></h2></td></tr>
       </apex:outputLabel>
       <apex:outputLabel rendered="{!!customerOrFoundary}">
                <tr align="center"><td colspan="5"><h2><u>Frame Mockup Review - Foundry</u></h2></td></tr>
       </apex:outputLabel>
   </table>
    <br/>
    <table  cellspacing="5"> 
           <tr>
             <td style="font-weight:bold;">Customer Name:</td>
             <td>{!account_idmap[selectedCustomer]}</td>
           </tr>
           <tr> 
             <td style="font-weight:bold;">Mask Set Title:</td>
             <td>{!IDMstNameMap[selectedmst]}</td>
           </tr>
           <apex:outputLabel rendered="{!IF(selectedMaskLayer!=null,true,false)}">
             <tr>
               <td style="font-weight:bold;">Mask Layer</td>
               <td>{!idAndMaskLayer[selectedMaskLayer]}</td>
             </tr>
           </apex:outputLabel>
           <apex:outputLabel rendered="{!IF(selectedLayerStatus!=null,true,false)}">
             <tr>
               <td style="font-weight:bold;">Mask Layer</td>
               <td>{!selectedLayerStatus}</td>
             </tr>
           </apex:outputLabel>
           <apex:outputLabel rendered="{!IF(selectedDeviceId!=null,true,false)}">
             <tr>
               <td style="font-weight:bold;">Mask Layer</td>
               <td>{!selectedDeviceId}</td>
             </tr>
           </apex:outputLabel>
           <apex:outputLabel rendered="{!IF(selectedFrameStatus!=null,true,false)}">
             <tr>
               <td style="font-weight:bold;">Mask Layer</td>
               <td>{!selectedFrameStatus}</td>
             </tr>
           </apex:outputLabel>
    </table> 
    <br/>
    <table style="border:1px solid black solid #ccc;" cellspacing="0" cellpadding="2" border="1">
        <thead style="background:#e3e3e3;">
            <tr style="height:45px;">
                
               <!-- <th align="left" style="border:1px solid #ccc; border-left:0;"><span>No.</span></th>
                <th align="left" style="border:1px solid #ccc; border-left:0;"><span>PTRF</span></th>
                
                <apex:outputLabel rendered="{!reticleType}"> 
                <th align="left" style="border:1px solid #ccc; border-left:0;"><span>Tech Geo</span></th> 
                </apex:outputLabel>
                <th align="left" style="border:1px solid #ccc; border-left:0;"><span>Frame</span></th> -->
               <th> <apex:outputLabel style="border:0px solid #ccc; border-left:0;align:left"><span>No.</span></apex:outputLabel> </th>
               <th> <apex:outputLabel style="border:0px solid #ccc; border-left:0;align:left"><span>PTRF</span></apex:outputLabel> </th>
               <th> <apex:outputLabel style="border:0px solid #ccc; border-left:0;align:left" rendered="{!reticleType}"><span>Tech Geo</span></apex:outputLabel> </th>
               <th> <apex:outputLabel style="border:0px solid #ccc; border-left:0;align:left"><span>Frame</span></apex:outputLabel> </th>
            </tr>
        </thead>
       
        <!--<apex:outputLabel rendered="{!frame.color}"> -->
        <tbody >
             <apex:repeat value="{!lstframeTableWrapper}" var="frame">
               <tr >
               <!-- <tr style="background-color:#FF0000"> -->
                <td><apex:outputLabel style="border-right:0px solid #ccc; border-left:0;align:left">{!frame.srlNo}</apex:outputLabel> </td>
                <td><apex:outputLabel style="border-right:0px solid #ccc; border-left:0;align:left">{!frame.ptrf}</apex:outputLabel> </td>
                <td><apex:outputLabel rendered="{!reticleType}" style="border-right:0px solid #ccc; border-left:0;align:left"> 
                {!frame.techGeo}
                </apex:outputLabel> 
               </td>
                <td><apex:outputLabel style="border-right:0px solid #ccc; border-left:0;align:left">{!frame.status}</apex:outputLabel></td>
                </tr>
               </apex:repeat>
                
           
        </tbody>
       <!-- </apex:outputLabel> -->
        
    </table>  
    
</apex:form>
</apex:page>