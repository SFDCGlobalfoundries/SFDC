<apex:page standardController="Apttus_Proposal__Proposal__c" extensions="SRAM_Devices_Controller" showChat="false" showHeader="false">
<apex:form id="frm">
<apex:pageMessages ></apex:pageMessages>
  <apex:pageBlock > 
     <apex:pageBlockButtons rendered="{!isEdit && !readOnlyModeEnabled}">
      <apex:commandButton value="Save" action="{!saveSramSize}" reRender="frm"/>
      <apex:commandButton value="Cancel" onclick="window.close();"/>
    </apex:pageBlockButtons>
    <apex:pageBlockButtons rendered="{!!isEdit && !readOnlyModeEnabled}">
      <apex:commandButton value="Edit" action="{!goToEdit}"/>
      <apex:commandButton value="Close" onclick="window.close();"/>
    </apex:pageBlockButtons>
     
   <apex:pageBlockSection title="SRAM Details">
   
    <apex:pageBlockTable value="{!LstSRAMDevicesView}" var="dev" width="50%" rendered="{!isEdit}">
      <apex:column headerValue="Product Name" value="{!dev.prodName}" width="50%"/> 
      <apex:column headerValue="Description" value="{!dev.modelName}" width="50%"/> 
      <apex:column headerValue="Size(KB or MB)" >
        <apex:inputText value="{!dev.Size}"/> 
      </apex:column>  
    </apex:pageBlockTable>    
     <apex:pageBlockTable value="{!LstSRAMDevicesView}" var="dev" width="50%" rendered="{!!isEdit}">
      <apex:column headerValue="Product Name" value="{!dev.prodName}" width="50%"/> 
      <apex:column headerValue="Description" value="{!dev.modelName}" width="50%"/> 
      <apex:column headerValue="Size(KB or MB)" value="{!dev.size}"/>  
    </apex:pageBlockTable> 
    </apex:pageBlockSection> 
    
    <apex:pageBlockSection title="OTP Details">
        <apex:outputlabel value="OTP Size(KB or MB)">&nbsp; &nbsp; &nbsp;
           <apex:inputtext value="{!otpsize}" rendered="{!isEdit}"/>
           <apex:outputtext value="{!Apttus_Proposal__Proposal__c.OTP_Size__c}" rendered="{!!isEdit}"/>
        </apex:outputlabel>
        <br></br>

       <apex:outputlabel value="Is it Sponsored IP?">&nbsp; &nbsp; &nbsp;
           <apex:inputCheckbox value="{!Sponsered}" rendered="{!isEdit}"/>
           <apex:inputCheckbox value="{!Apttus_Proposal__Proposal__c.IS_it_Sponsered_IP__c}" rendered="{!!isEdit}" disabled="true"/>
        </apex:outputlabel> 
        <br></br>
        
        <apex:outputlabel value="UV Passivation Required?">&nbsp; &nbsp; &nbsp;
           <apex:inputCheckbox value="{!Pasivation}" rendered="{!isEdit}"/>
           <apex:inputCheckbox value="{!Apttus_Proposal__Proposal__c.UV_Pasivation_Required__c}" rendered="{!!isEdit}" disabled="true"/>
        </apex:outputlabel> 
    </apex:pageBlockSection>   
     
     <apex:pageBlockSection title="MTP Details">
   
        <apex:outputlabel value="MTP Size(KB or MB)   ">&nbsp; &nbsp; &nbsp;
           <apex:inputtext value="{!MTPsize}" rendered="{!isEdit}"/>
           <apex:outputtext value="{!Apttus_Proposal__Proposal__c.Size_MTP__c}" rendered="{!!isEdit}"/>
        </apex:outputlabel>
         
       <br></br>
       <apex:outputlabel value="Is it Sponsored IP?   ">&nbsp; &nbsp; &nbsp;
           <apex:inputCheckbox value="{!MTPSponsered}" rendered="{!isEdit}"/>
           <apex:inputCheckbox value="{!Apttus_Proposal__Proposal__c.IS_it_Sponsered_IP_MTP__c}" rendered="{!!isEdit}" disabled="true"/>
        </apex:outputlabel> 
        <br></br>
        
        <apex:outputlabel value="UV Passivation Required?   ">&nbsp; &nbsp; &nbsp;
           <apex:inputCheckbox value="{!MTPPasivation}" rendered="{!isEdit}"/>
           <apex:inputCheckbox value="{!Apttus_Proposal__Proposal__c.UV_Pasivation_Required_MTP__c}" rendered="{!!isEdit}" disabled="true"/>
        </apex:outputlabel> 
    </apex:pageBlockSection> 
  </apex:pageBlock>
</apex:form>  
</apex:page>