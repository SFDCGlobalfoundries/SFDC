<apex:page standardController="Case_Collaboration__c" >
<apex:sectionHeader title="{!$Label.CC_to_Case}" />     
<apex:pagemessages id="msg" />
<apex:panelGrid style="padding:1px;margin-bottom:5px;border-radius:2px" columns="1" bgcolor="#DCFBDC" width="100%"  >        
        <ul>
            {!$Label.CC_to_Case_Description}
        </ul>
</apex:panelGrid>
  
  <apex:form >
 
        <apex:pageBlock mode="maindetail" tabStyle="Case"   >
            <apex:pageBlockButtons > 
                <apex:commandButton action="{!save}" value="Save" reRender="msg"/>
                <apex:commandButton action="{!cancel}" value="Cancel" />
            </apex:pageBlockButtons>
            
            <apex:pageBlockSection title="{!$Label.CC_to_Case_unsubscribe}" columns="2" collapsible="false">  
            <apex:outputField value="{!Case_Collaboration__c.Name}" />          
            <apex:outputField value="{!Case_Collaboration__c.Case__c}" />
            <apex:outputField value="{!Case_Collaboration__c.Contact__c}" />
            <apex:outputField value="{!Case_Collaboration__c.Email__c}" />
            <apex:inputField value="{!Case_Collaboration__c.Is_Subscribed__c}" />
            
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>   
</apex:page>