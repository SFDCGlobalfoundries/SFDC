<apex:page standardController="Contact" extensions="QuaterlyScoreAreaTrendController">
<apex:outputPanel rendered="{!NOT(isSF1)}">
  <apex:pageBlock title="Score Trends">  
         <apex:chart height="400" width="700" data="{!LinearData}" rendered="{!IF(LinearData.size >0 && (LinearData[0].totalQuaterRec > 0 || LinearData[1].totalQuaterRec > 0 || LinearData[2].totalQuaterRec > 0 || LinearData[3].totalQuaterRec > 0),true,false)}"> 
          
          <apex:legend position="right"/>    
          <apex:axis type="Numeric" position="left" fields="totalQuaterRec,areaTechnologyCount,areaFabOpCount,areaSupplyCount,areaEnablementCount,areaCapacityCount,areaAttentivenessCount,areaPriceCount,areaBusinessCount" title="Quarter Record Count" steps="4"/>
          <apex:axis type="Numeric" position="right" fields="areaTechnologyAvg,areaFabOpAvg,areaSupplyAvg,areaEnablementAvg,areaCapacityAvg,areaAttentivenessAvg,areaPriceAvg,areaBusinessAvg" title="Area Average" steps="2" />
          <apex:axis type="Category" position="bottom" fields="quarter" title="Quarter of the Year" />
                                           
          <apex:barSeries orientation="vertical" stacked="false" axis="left" xField="quarter" yField="areaTechnologyCount,areaFabOpCount,areaSupplyCount,areaEnablementCount,areaCapacityCount,areaAttentivenessCount,areaPriceCount,areaBusinessCount" showInLegend="false" title="Technology Roadmap,Fab Operations,Assurance of Supply,Design Enablement,Capacity,Attentiveness,Price,Ease of Doing Business"
          colorSet="#0B6FCE,#78C953,#E27001,#A845DC,#F3D904,#A53711,#66E9BD,#0B24BE"/>
          <apex:lineSeries title="Technology Roadmap Avg" axis="right" xField="quarter" yField="areaTechnologyAvg" fill="false" markerType="cross" markerSize="4" markerFill="#0B6FCE" strokeColor="#0B6FCE"/>
          <apex:lineSeries title="Fab Operations Avg" axis="right" xField="quarter" yField="areaFabOpAvg" fill="false" markerType="cross" markerSize="4" markerFill="#78C953" strokeColor="#78C953"/>
          <apex:lineSeries title="Assurance of Supply Avg" axis="right" xField="quarter" yField="areaSupplyAvg" fill="false" markerType="cross" markerSize="4" markerFill="#E27001" strokeColor="#E27001"/>
          <apex:lineSeries title="Design Enablement Avg" axis="right" xField="quarter" yField="areaEnablementAvg" fill="false" markerType="cross" markerSize="4" markerFill="#A845DC" strokeColor="#A845DC"/>
          <apex:lineSeries title="Capacity Avg" axis="right" xField="quarter" yField="areaCapacityAvg" fill="false" markerType="cross" markerSize="4" markerFill="#F3D904" strokeColor="#F3D904"/>
          <apex:lineSeries title="Attentiveness Avg" axis="right" xField="quarter" yField="areaAttentivenessAvg" fill="false" markerType="cross" markerSize="4" markerFill="#A53711" strokeColor="#A53711"/>
          <apex:lineSeries title="Price Avg" axis="right" xField="quarter" yField="areaPriceAvg" fill="false" markerType="cross" markerSize="4" markerFill="#66E9BD" strokeColor="#66E9BD"/>
          <apex:lineSeries title="Ease of Doing Business Avg" axis="right" xField="quarter" yField="areaBusinessAvg" fill="false" markerType="cross" markerSize="4" markerFill="#0B24BE" strokeColor="#0B24BE"/>
          </apex:chart> 
          <apex:outputLabel rendered="{!IF(LinearData[0].totalQuaterRec == 0 && LinearData[1].totalQuaterRec == 0 && LinearData[2].totalQuaterRec == 0 && LinearData[3].totalQuaterRec == 0,true,false)}"><b>There are no VoC Score to show trends</b></apex:outputLabel>
   </apex:pageBlock> 
</apex:outputPanel>
<apex:outputPanel rendered="{!isSF1}" style="height:100%;width:500%">
    <apex:pageBlock title="Score Trends" >  
         <apex:chart height="400" width="500" data="{!LinearData}" rendered="{!IF(LinearData.size >0 && (LinearData[0].totalQuaterRec > 0 || LinearData[1].totalQuaterRec > 0 || LinearData[2].totalQuaterRec > 0 || LinearData[3].totalQuaterRec > 0),true,false)}"> 
          
          <apex:legend position="right"/>    
          <apex:axis type="Numeric" position="left" fields="totalQuaterRec,areaTechnologyCount,areaFabOpCount,areaSupplyCount,areaEnablementCount,areaCapacityCount,areaAttentivenessCount,areaPriceCount,areaBusinessCount" title="Quarter Record Count" steps="4"/>
          <apex:axis type="Numeric" position="right" fields="areaTechnologyAvg,areaFabOpAvg,areaSupplyAvg,areaEnablementAvg,areaCapacityAvg,areaAttentivenessAvg,areaPriceAvg,areaBusinessAvg" title="Area Average" steps="2"/>
          <apex:axis type="Category" position="bottom" fields="quarter" title="Quarter of the Year">
              <apex:chartLabel rotate="270"/>
          </apex:axis>
                                           
          <apex:barSeries orientation="vertical" stacked="false" axis="left" xField="quarter" yField="areaTechnologyCount,areaFabOpCount,areaSupplyCount,areaEnablementCount,areaCapacityCount,areaAttentivenessCount,areaPriceCount,areaBusinessCount" showInLegend="false" title="Technology Roadmap,Fab Operations,Assurance of Supply,Design Enablement,Capacity,AttentivenessPrice,Ease of Doing Business"
          colorSet="#0B6FCE,#78C953,#E27001,#A845DC,#F3D904,#A53711,#66E9BD,#0B24BE"/>
          <apex:lineSeries title="Technology Roadmap Avg" axis="right" xField="quarter" yField="areaTechnologyAvg" fill="false" markerType="cross" markerSize="4" markerFill="#0B6FCE" strokeColor="#0B6FCE"/>
          <apex:lineSeries title="Fab Operations Avg" axis="right" xField="quarter" yField="areaFabOpAvg" fill="false" markerType="cross" markerSize="4" markerFill="#78C953" strokeColor="#78C953"/>
          <apex:lineSeries title="Assurance of Supply Avg" axis="right" xField="quarter" yField="areaSupplyAvg" fill="false" markerType="cross" markerSize="4" markerFill="#E27001" strokeColor="#E27001"/>
          <apex:lineSeries title="Design Enablement Avg" axis="right" xField="quarter" yField="areaEnablementAvg" fill="false" markerType="cross" markerSize="4" markerFill="#A845DC" strokeColor="#A845DC"/>
          <apex:lineSeries title="Capacity Avg" axis="right" xField="quarter" yField="areaCapacityAvg" fill="false" markerType="cross" markerSize="4" markerFill="#F3D904" strokeColor="#F3D904"/>
          <apex:lineSeries title="Attentiveness Avg" axis="right" xField="quarter" yField="areaAttentivenessAvg" fill="false" markerType="cross" markerSize="4" markerFill="#A53711" strokeColor="#A53711"/>
          <apex:lineSeries title="Price Avg" axis="right" xField="quarter" yField="areaPriceAvg" fill="false" markerType="cross" markerSize="4" markerFill="#66E9BD" strokeColor="#66E9BD"/>
          <apex:lineSeries title="Ease of Doing Business Avg" axis="right" xField="quarter" yField="areaBusinessAvg" fill="false" markerType="cross" markerSize="4" markerFill="#0B24BE" strokeColor="#0B24BE"/>
          </apex:chart> 
          <apex:outputLabel rendered="{!IF(LinearData[0].totalQuaterRec == 0 && LinearData[1].totalQuaterRec == 0 && LinearData[2].totalQuaterRec == 0 && LinearData[3].totalQuaterRec == 0,true,false)}"><b>There are no VoC Score to show trends</b></apex:outputLabel>
   </apex:pageBlock>
</apex:outputPanel>    
</apex:page>