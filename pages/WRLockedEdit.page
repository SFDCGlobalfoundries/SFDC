<apex:page controller="WREditController" tabstyle="Bug__c" showChat="false">
    <apex:sectionHeader title="Change Project Manager" subtitle="{!wr.Name}" rendered="{!ISNULL($CurrentPage.parameters.pm)}"  />
    <apex:form >
        <apex:pageMessages />
        <apex:pageBlock id="pb" mode="Edit" >
            <apex:pageBlockSection title="Information" columns="2" collapsible="false">
                <apex:outputField value="{!wr.Name}" />
                <apex:outputField value="{!wr.OwnerId}" />
                <apex:outputField value="{!wr.Status__c}" />
            </apex:pageBlockSection>
            <apex:pageBlockSection title="Information" columns="1" showHeader="false">
                <apex:outputField value="{!wr.Bug_Title__c}" />
                <apex:outputField value="{!wr.Bug_Description__c}" />
            </apex:pageBlockSection>
            <apex:pageBlockSection title="PDK Details" columns="2">
                <apex:outputField value="{!wr.Request_Type__c}"  />
                <apex:outputField value="{!wr.Need_By_Date__c}" />
                <apex:outputField value="{!wr.Geometry__c}"  />
                <apex:outputField value="{!wr.Master_PDK__c}"  />
                <apex:outputField value="{!wr.Target_Process_Node__c}" />
                <apex:outputField value="{!wr.Process_Technology__c}" />
                <apex:outputField value="{!wr.Proposed_Technology_Name__c}" />
                <apex:outputField value="{!wr.New_Devices_Required__c}" />
            </apex:pageBlockSection>
            <apex:pageBlockSection title="Project Manager Information" columns="1" rendered="{!ISNULL($CurrentPage.parameters.pm)}" >
                <apex:inputField value="{!wr.Project_Manager__c}" required="true"/>
                <apex:outputField value="{!wr.Project_Manager_Queue__c}" />
            </apex:pageBlockSection>
            <apex:pageblockButtons location="bottom">
                <apex:commandButton value="Save" action="{!save}" style="width: 75px;" />
                <apex:commandButton value="Cancel" action="{!cancel}" Immediate="True" style="width: 75px;" />
            </apex:pageblockButtons>
        </apex:pageBlock>
    </apex:form>
</apex:page>