<apex:page standardController="DRT__c" extensions="DRTDetailExtn"  showHeader="false" sideBar="false" standardStylesheets="false" 
contentType="application/pdf#{!drtName}.pdf" renderAs="pdf" cache="true">

<apex:outputPanel id="frameDRTOutputId">
<apex:outputPanel id="frameDRTId" rendered="{!drtFrameType}">
<table>
    <thead>
    <tr align="center"><td><h1>{!drtName}</h1></td>
    </tr>
    </thead>
</table>
        
<table border="0" cellspacing="5">
 <tr>
      <td style="font-weight:bold;">Customer Name:</td>
      <td>{!savedCustomerName}</td>
      <td style="font-weight:bold;">Status:</td>
      <td>{!savedStatus}</td>      
 </tr>
 <tr>
      <td style="font-weight:bold;">Mask Set Title:</td>
      <td>{!savedMaskSetTitle}</td>
      <td style="font-weight:bold;width:150px;">DRT Type:</td>
      <td>{!savedDRTType}</td>      
 </tr>
 <apex:repeat var="l" value="{!lstDummy}" rendered="{!isTechGeoNull}">
     <tr>
          <th>Tech Geo:</th>
          <td>{!savedTechGeo}</td>
     </tr>
 </apex:repeat>
</table>

<br></br>
<br></br>

<table border="0" cellspacing="5">
    <thead>
    <tr><th align="left">Description:</th></tr>
    </thead>
    <tbody>
    <tr><td>{!description}</td></tr>
    </tbody>
</table>

<br></br>
<br></br>



<table id="frameDRTTable"  style="border:1px solid #ccc;" cellspacing="0" cellpadding="2">
         <apex:variable var="i" value="{!1}"/>
         <thead style="background:#e3e3e3;">
             <tr style="height:45px;">         
                  <th align="left" style="border:1px solid #ccc; border-left:0;"><span>No.</span></th>
                  <th align="center" style="border:1px solid #ccc; border-left:0;"><span>Mask set Title</span></th>
                  <th align="center" style="border:1px solid #ccc; border-left:0;"><span>Mask Layer</span></th>
                  <th align="center" style="border:1px solid #ccc; border-left:0;"><span>Retrofit PTRF Mask Rev</span></th>
                  <th align="center" style="border:1px solid #ccc; border-left:0;"><span>Retrofit PTRF ROM Code</span></th>
                  <th align="center" style="border:1px solid #ccc; border-left:0;"><span>Mask Rev</span></th>
                  <th align="center" style="border:1px solid #ccc; border-left:0;"><span>ROM Code</span></th>                                        
             </tr>
         </thead>
         <tbody>
             <apex:variable var="counter" value="{!1}"/>
             <apex:repeat value="{!frameDRTLst}"  var="frameDrt">
                <apex:variable var="colorStyle" value="{!IF(mod(counter,2)==0,'background-color:#F3F2F2;','')}"/>
                     <tr style="{!colorStyle}">
                        <td align="left" style="border-right:1px solid #ccc;">{!counter}</td>
                        <td align="center" style="border-right:1px solid #ccc;">{!frameDrt.Mask_Set_Title__r.Name}</td>
                        <td align="center" style="border-right:1px solid #ccc;">{!frameDrt.Mask_Layer_No__c}</td>
                        <td align="center" style="border-right:1px solid #ccc;">{!frameDrt.Retrofit_Mask_Rev__c}</td>
                        <td align="center" style="border-right:1px solid #ccc;">{!frameDrt.Retrofit_ROM_Code__c}</td>
                        <td align="center" style="border-right:1px solid #ccc;">{!frameDrt.Mask_Rev__c}</td>
                        <td align="center" style="border-right:1px solid #ccc;">{!frameDrt.ROM_Code__c}</td>
                     </tr>
                <apex:variable var="counter" value="{!counter+1}"/>
              </apex:repeat>
          </tbody>                
</table>
</apex:outputPanel> 
</apex:outputPanel>
                  
<apex:outputPanel id="primeDRTOutputId"> 
<apex:outputpanel id="primeDRTId" rendered="{!drtPrimeType}">
<table>
    <thead>
        <tr align="center"><td><h1>{!drtName}</h1></td></tr>
    </thead>
</table>
        
<table border="0" cellspacing="5">
 
 <tr>
      <td style="font-weight:bold;">Customer Name:</td>
      <td>{!savedCustomerName}</td>
      <td style="font-weight:bold;">Status:</td>
      <td>{!savedStatus}</td>      
 </tr>
 <tr>
      <td style="font-weight:bold;">Mask Set Title:</td>
      <td>{!savedMaskSetTitle}</td>
      <td style="font-weight:bold;width:150px;">DRT Type:</td>
      <td>{!savedDRTType}</td>      
 </tr>
 <apex:repeat var="l" value="{!lstDummy}" rendered="{!isTechGeoNull}">
     <tr>
          <th>Tech Geo:</th>
          <td>{!savedTechGeo}</td>
     </tr>
 </apex:repeat>
</table>

<br></br>
<br></br>

<table border="0" cellspacing="5">
    <thead>
    <tr><th align="left">Description:</th></tr>
    </thead>
    <tbody>
    <tr><td>{!description}</td></tr>
    </tbody>
</table>

<br></br>
<br></br>

<table  style="border:1px solid #ccc;" cellspacing="0" cellpadding="2">
    <thead style="background:#e3e3e3;height:68px;">
        <tr>
           <th rowspan="3" align="left" style="border-bottom:1px solid #ccc;border-right:1px solid #ccc;background:#e3e3e3;">No.</th>
           <th rowspan="3" align="center" style="border-bottom:1px solid #ccc;border-right:1px solid #ccc;">Mask Set Title</th>
           <th rowspan="3" align="center" style="border-bottom:1px solid #ccc;border-right:1px solid #ccc;">Prime Die/Scribeline Drop-in</th>
           <apex:repeat value="{!maskLayerHeaderWrapperList}" var="m"> 
                            <th rowspan="3" style="border-bottom:1px solid #ccc;">
                                <table style="border:1px solid #ccc;" cellspacing="0" cellpadding="2">
                                    <tbody>
                                        <tr>
                                            <td colspan="2" align="center" style="border-bottom:1px solid #ccc;">
                                                <strong>Mask Layer : {!m.layerNo}</strong>
                                               
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="center" style="border-right:1px solid #ccc;border-bottom:1px solid #ccc; font-weight:normal;">
                                                {!m.retroftMaskRev}
                                            </td>
                                            <td align="center" style="border-bottom:1px solid #ccc; font-weight:normal;">
                                                {!m.retroftRomCode}
                                            </td>
                                        </tr>
                                        <tr>
                                            <th align="center" style="border-right:1px solid #ccc;">Mask Rev</th>
                                            <th align="center">ROM Code</th>
                                        </tr>
                                    </tbody>
                                </table>
                           </th>
           </apex:repeat>         
        </tr> 
    </thead>
    <tbody>
        <apex:variable var="counter" value="{!1}"/>
        <apex:repeat value="{!chipWrapperList}" var="chip">
            <apex:variable var="colorStyle" value="{!IF(mod(counter,2)==0,'background-color:#F3F2F2;','')}"/>
                <tr style="{!colorStyle}">
                    <td align="left" style="border-right:1px solid #ccc;border-bottom:1px solid #ccc;">{!chip.counter}</td> 
                    <td align="center" style="border-right:1px solid #ccc;border-bottom:1px solid #ccc;">{!chip.mstName}</td> 
                    <td align="center" style="border-right:1px solid #ccc;border-bottom:1px solid #ccc;">{!chip.chipName}</td>
                    <apex:repeat value="{!maskLayerHeaderWrapperList}" var="layer">
                        <apex:variable var="cell" value="{!mapDisplayedMaskLayerData[layer.layerID][chip.chipID]}"/>
                       <td style="border-bottom:1px solid #ccc;">
                           <table  cellspacing="0" cellpadding="2" width="100%">
                               <tbody>
                                <tr>
                                    <td align="center" style="width: 70px!important; border-right:1px solid #ccc;">{!cell['MaskRev']}</td> 
                                    <td align="center" style="width: 70px!important; border-right:1px solid #ccc;">{!cell['RomCode']}</td>
                                </tr>
                                </tbody>
                           </table>
                       </td>
                   </apex:repeat>
                </tr>
             <apex:variable var="counter" value="{!counter+1}"/>                                                                        
        </apex:repeat>
    </tbody>
</table>
</apex:outputpanel>
</apex:outputPanel>
</apex:page>