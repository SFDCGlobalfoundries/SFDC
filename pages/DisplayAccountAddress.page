<apex:page standardController="Account" extensions="DisplayAccountAddressController">        
    <script>
    function newBillToAddress() {                                  
            
                var url = "/apex/MultipleBillToAddress?accid={!accId}";            
                window.top.location.href = url;
          
     }
          
    </script>
    <apex:form >           
        <apex:pageBlock >
            <center><apex:commandButton value="New Bill To Address" onclick="newBillToAddress();return false;"/></center><br/>
            <apex:pageBlockTable value="{!accAddress}" var="addr">
                <apex:column title="Name" headerValue="Address Name">
                    <apex:outputLink rendered="{!IF(addr.Type__c == 'Bill To Address',true,false)}" value="/{!addr.id}" target="_blank">
                        {!addr.name}
                    </apex:outputLink>                   
                    <apex:outputField value="{!addr.name}" rendered="{!IF(addr.Type__c == 'Ship To Address',true,false)}"/>
                </apex:column>      
                <apex:column value="{!addr.Address_1__c}"/>
                <apex:column value="{!addr.Location__c}"/>          
                <apex:column value="{!addr.City__c}"/>
                <apex:column value="{!addr.Country__c}"/>
                <apex:column value="{!addr.Status__c}"/>
                <apex:column value="{!addr.Postal_Zip_Code__c}"/>
                <apex:column value="{!addr.Type__c}"/>
                <apex:column value="{!addr.Is_Primary_Address__c}"/>
            </apex:pageBlockTable>
        </apex:pageBlock>                  
    </apex:form>    
</apex:page>