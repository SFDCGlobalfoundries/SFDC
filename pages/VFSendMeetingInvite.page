<apex:page standardController="Team_Room_Meeting__c" extensions="ClsSendMeetingInviteController">
   <apex:pageMessages id="MessageId"/>
    <apex:form >
        <apex:pageBlock >
            <apex:pageBlockButtons >
                <apex:commandButton value="Confirm" action="{!sendmail}" disabled="{!disableConfirmButton}" reRender="MessageId"/>
                <apex:commandButton value="Cancel" action="{!cancelSendingMail}"/>
            </apex:pageBlockButtons>
            <apex:pageBlockSection title="GF Meeting Invitee Details" collapsible="false" columns="1">
                <apex:pageBlockTable value="{!inviteeList}" var="invitee" >
                    <apex:column headerValue="GF Meeting Invitee">{!invitee.Name}</apex:column>
                    <apex:column headerValue="Invitee Name">{!invitee.User__r.Name}</apex:column>
                    <apex:column headerValue="Email Address">{!invitee.User_Email_Address__c}</apex:column>
                    <apex:column headerValue="Associated Team Room Meeting">{!invitee.Team_Room_Meeting__r.Name}</apex:column>
                    <apex:column headerValue="Start Date Time">{!invitee.Team_Room_Meeting__r.Start_DateTime__c}</apex:column>
                    <apex:column headerValue="End Date Time">{!invitee.Team_Room_Meeting__r.End_DateTime__c}</apex:column>
                </apex:pageBlockTable>
            </apex:pageBlockSection>
       </apex:pageBlock>
   </apex:form>
</apex:page>