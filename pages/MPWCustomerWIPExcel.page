<apex:page controller="MPWCustomerWIPExcelController" readOnly="true" contentType="application/vnd.ms-excel#MPW_WIP_{!TODAY()}.xls" cache="true" >
    <table border="1" style="border-collapse: collapse;" >
        <thead >
            <tr style="background-color: #d6d6d6;" >
                <th>Customer</th>
                <th>MPW Train</th>
                <th>MPW Prime Die</th>
                <th>MPW Form#</th>
                <th>Technology Name</th>
                <th>Sales Order</th>
                <th>Geometry</th>
                <th>Current Schedule Date(CSD)</th>
                <th>Bare Die Shipment Forecast Date</th>
                <th>Current Mask Layer</th>
                <th>Remaining Mask Count</th>
                <th>Stage Name</th>
                <th>Lot State</th>
                <th>Current Lot Location</th>
                <th>Last Modified Date</th>
                <th>MPW WIP Lot No</th>
            </tr>
        </thead>
        <tbody>
            <apex:repeat value="{!lstAssignments}" var="assign" >
                <tr>
                    <td><apex:outputText value="{!assign.MPW_Form_Customer_Account_Name__c}" /></td>
                    <td><apex:outputText value="{!assign.MPW_Train_Name__c}" /></td>
                    <td><apex:outputText value="{!assign.Prime_Die_Name__c}" /></td>
                    <td><apex:outputText value="{!assign.MPW_form__c}" /></td>
                    <td><apex:outputText value="{!assign.Technology_Type__c}" /></td>
                    <td><apex:outputText value="{!assign.Sales_Order__c}" /></td>
                    <td><apex:outputText value="{!assign.Geometry__c}" /></td>
                    <td>
                        <apex:outputText value="{0,date,dd MMM, YYYY}" rendered="{!IF(assign.Current_Scheduled_Date_CSD_OR__c == NULL, true, false)}"> 
                            <apex:param value="{!assign.Current_Scheduled_Date_CSD__c}" /> 
                        </apex:outputText>
                        <apex:outputText value="{0,date,dd MMM, YYYY}" rendered="{!IF(assign.Current_Scheduled_Date_CSD_OR__c != NULL, true, false)}"> 
                            <apex:param value="{!assign.Current_Scheduled_Date_CSD_OR__c}" /> 
                        </apex:outputText>
                    </td>
                    <td>
                        <apex:outputText value="{0,date,dd MMM, YYYY}" rendered="{!IF(assign.Bare_Die_Shipment_Forecast_Date_OR__c == NULL, true, false)}" > 
                            <apex:param value="{!assign.Bare_Die_Shipment_Forecast_Date_BL__c}" /> 
                        </apex:outputText>
                        <apex:outputText value="{0,date,dd MMM, YYYY}" rendered="{!IF(assign.Bare_Die_Shipment_Forecast_Date_OR__c != NULL, true, false)}" > 
                            <apex:param value="{!assign.Bare_Die_Shipment_Forecast_Date_OR__c}" /> 
                        </apex:outputText>
                    </td>
                    <td><apex:outputText value="{!assign.Current_Mask_Layer__c}" /></td>
                    <td>
                        <apex:outputText value="{!assign.Remaining_Mask_Count__c}" 
                        rendered="{!IF(OR(AND(assign.MPW_Prime_Die__r.Fab_ID__c != 'Fab1', assign.MPW_Prime_Die__r.Fab_ID__c != 'Fab8'), AND(assign.Geometry__c != '0.028UM', assign.Geometry__c != '0.022UM', assign.Geometry__c != '0.020UM', assign.Geometry__c != '0.014UM', assign.Geometry__c != '0.010UM', assign.Geometry__c != '0.007UM')), true, false)}" />
                    </td>
                    <td><apex:outputText value="{!assign.Stage_Name__c}" /></td>
                    <td><apex:outputText value="{!assign.Lot_State__c}" /></td>
                    <td><apex:outputText value="{!assign.Current_Lot_Location__c}" /></td>
                    <td>
                        <apex:outputText value="{0,date,dd MMM, YYYY}"> 
                            <apex:param value="{!assign.Lot_Last_Modified_Date__c}" /> 
                        </apex:outputText>
                    </td>
                    <td><apex:outputText value="{!assign.Name}" /></td>
                </tr>
            </apex:repeat>
        </tbody>
    </table>
    <br/><br/>
    <table border="0" style="border-collapse: collapse;" >
        <tr>
            <td colspan="14" >Created Date:<span style="width:5px;" />
                <apex:outputText value="{0,date,dd MMMM, YYYY}"> 
                    <apex:param value="{!today()}" /> 
                </apex:outputText>
            </td>
        </tr>
        <tr>
            <td colspan="14" >Customer Tapeout From Date:<span style="width:5px;" />
                <apex:outputText value="{0,date,dd MMMM, YYYY}" rendered="{!IF(dtFromDate != null, true, false)}" > 
                    <apex:param value="{!dtFromDate}" /> 
                </apex:outputText>
            </td>
        </tr>
        <tr>
            <td colspan="14" >Customer Tapeout To Date:<span style="width:5px;" />
                <apex:outputText value="{0,date,dd MMMM, YYYY}" rendered="{!IF(dtToDate != null, true, false)}" > 
                    <apex:param value="{!dtToDate}" /> 
                </apex:outputText>
            </td>
        </tr>
    </table>
</apex:page>