<apex:page standardController="Part_Family__c" extensions="MDD_FamilyAttachments" showHeader="false" sidebar="false" >
    <apex:sectionHeader subtitle="{!Part_Family__c.Name}" title="Files"/>
    <apex:form >
        <apex:pageBlock >
            <apex:outputPanel rendered="{!showErrPan}">
                <apex:outputText style="font-size:30px" value="Record Does not exist, please contact administrator"/>
            </apex:outputPanel>
            <apex:pageBlockSection columns="1">
                <apex:outputText value="{!str}" escape="false"></apex:outputText>
            </apex:pageBlockSection>
            <apex:pageBlockSection columns="1">
                <apex:pageBlockTable value="{!lstAttach}" var="a">
                    <apex:column headerValue="Download">
                        <apex:commandLink action="{!download}" target="_blank" >Download
                        <apex:param name="feedParam" value="{!a.RelatedRecordId}" assignTo="{!relatedRecordId}"/>
                        </apex:commandLink>
                    </apex:column>
                    <apex:column value="{!a.Title}" />
                    <apex:column value="{!a.ContentType}"/>
                </apex:pageBlockTable>
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>