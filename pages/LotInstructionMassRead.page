<apex:page standardController="Lot_Instruction__c" recordSetVar="unused" sidebar="false" extensions="LotInstructionMassReadController">
    
    <style type="text/css">
        #innerTable {border-spacing:0px;border-collapse:collapse;text-align:center;}
        #innerTable tr td{border:1px solid #e0e3e5;text-align:center;}
        #headerTable {border-spacing:0px;border-collapse:collapse;}
        #headerTable tr td{border:1px solid #e0e3e5;text-align:center;}
        //#qtrDiv {overflow:auto;position:relative;width:1200px;height:130px;text-align:left;display:block}
        .outerTable {text-align:center;border-spacing: 0px;background-color:#FFFFFF;border:1px solid #e0e3e5;vertical-align:middle;align:left;border-collapse:collapse;}
        .outerTr{color: #000;font-size: .9em;font-weight: bold;}
        .outerTd{vertical-align:middle;text-align:center;}
        .firstTable{background-color:#ececec;background-repeat: repeat-x;border-spacing: -10px;border-color: #ececec;border:1px solid #e0e3e5;border-collapse:collapse;}
        
        .headerRow .TableTitle {
            background-color: #D6ECFF !important;
            font-size:100% !important; 
        }
        .dateFormat{
             visibility:hidden;
             display:none;
        }
    </style>
    <apex:includeScript value="{!$Resource.UtilJS}" />
    <apex:form >
        
        <apex:pageBlock >
            <apex:pageMessages />
            <apex:pageBlockSection columns="1">
                <apex:outputText style="font-weight:bold;color:red;" value="No Lot Instruction records were selected for Mass Read, please go back and select 1 or more records." rendered="{!noRecordsSelected}" /> 
                             
             
             </apex:pageBlockSection>
            
            <apex:pageBlockButtons >
             
           
            <apex:commandButton value="Return" action="{!cancel}"/>
            </apex:pageBlockButtons>

            <apex:pageBlockTable id="tableN" value="{!selected}" var="a" border="2px;">
                
                <apex:column style="height:50px; background-color: #F0F8FF !important;" headerClass="TableTitle" >                               
                          <apex:facet name="header">Lot instruction</apex:facet>
                          <apex:outputText value="{!a.name}" style="font-weight:bold;"/>                                                                              
                </apex:column>
                
                <apex:column style="height:50px; background-color: #F0F8FF !important;" headerClass="TableTitle" >                               
                          <apex:facet name="header">Manufacturing<br/>Lot Name</apex:facet>
                          <apex:outputText value="{!a.Manufacturing_Lot__r.name}" style="font-weight:bold;"/>                                                                              
                </apex:column>
                <apex:column style="height:50px; background-color: #F0F8FF !important;" headerClass="TableTitle" >                               
                          <apex:facet name="header">Device ID (ML)</apex:facet>
                          <apex:outputText value="{!a.Manufacturing_Lot__r.Customer_Device_Id__c}" style="font-weight:bold;"/>                                                                              
                </apex:column>
                <apex:column style="height:50px;background-color: #F0F8FF !important;" headerClass="TableTitle">                               
                          <apex:facet name="header">Request Type (LR)</apex:facet>
                          <apex:outputField value="{!a.Lot_Request__r.Lot_Request_Type__c}"/>                                                                              
                </apex:column>
                 <apex:column style="height:50px; background-color: #F0F8FF !important;" headerClass="TableTitle" >                               
                          <apex:facet name="header">Start lot quantity (ML) </apex:facet>
                          <apex:outputText value="{!a.Manufacturing_Lot__r.Start_Lot_Quantity__c}" style="font-weight:bold;"/>                                                                              
                </apex:column>
                <apex:column style="height:50px;background-color: #F0F8FF !important;" headerClass="TableTitle">                               
                          <apex:facet name="header">Current Customer <br/>Request Date (CRD)(ML)</apex:facet>
                          <apex:outputField value="{!a.Current_Customer_Request_Date_CRD_ML__c}"/>                                                                              
                </apex:column>
                <apex:column style="height:50px;background-color: #F0F8FF !important; text-align:center;" headerClass="TableTitle" >                               
                          <apex:facet name="header">New CRD (CSR)</apex:facet>
                          <apex:outputField value="{!a.Lot_Request__r.New_Customer_Requested_Date_CRD_CSR__c}"/>                                                                              
                </apex:column>
                <apex:column style="height:50px;background-color: #F0F8FF !important;" headerClass="TableTitle">                               
                          <apex:facet name="header">Current CSD (ML)</apex:facet>
                          <apex:outputField value="{!a.Manufacturing_Lot__r.Current_Scheduled_Date_CSD__c}"/>                                                                              
                </apex:column>
                
                <!--
                <apex:column style="height:50px;background-color: #F0F8FF !important;" headerClass="TableTitle">                               
                          <apex:facet name="header">New CSD (P)</apex:facet>
                          <apex:outputField value="{!a.Lot_Request__r.Request_Expedite_Commit_Date__c}"/>                                                                              
                </apex:column>
                -->         
                <apex:column style="height:50px;background-color: #F0F8FF !important;" headerClass="TableTitle">                               
                          <apex:facet name="header">Total Mask(ML)</apex:facet>
                          <apex:outputField value="{!a.Manufacturing_Lot__r.Total_Mask_Count__c}"/>                                                                              
                </apex:column>
                
                <apex:column style="height:50px;background-color: #F0F8FF !important;" headerClass="TableTitle">                               
                          <apex:facet name="header">Total Mask(ML)</apex:facet>
                          <apex:outputField value="{!a.Total_Mask_ML__c}"/>                                                                              
                </apex:column>
                             
                <apex:column style="height:50px;background-color: #F0F8FF !important;" headerClass="TableTitle">                               
                          <apex:facet name="header">Required DPML</apex:facet>
                          <apex:outputField value="{!a.Required_DPML__c}"/>                                                                              
                </apex:column>
                <apex:column style="height:50px;background-color: #F0F8FF !important;" headerClass="TableTitle">                               
                          <apex:facet name="header">Customer Required <br/> DPML</apex:facet>
                          <apex:outputField value="{!a.Customer_Required_DPML__c}"/>                                                                              
                </apex:column>

            </apex:pageBlockTable>  
        </apex:pageBlock>
        
    </apex:form>
    
    <script language="javascript">  
        window.onload= function()
        {
            var a = document.getElementById("innerTable");
            if(!(a && a!=null)){
                document.getElementById("qtrDiv").style.display="none";
            }
        }
    </script>
</apex:page>