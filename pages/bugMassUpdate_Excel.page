<apex:page standardController="Bug__c" recordSetVar="Bug__c" extensions="BugMassEditController" sidebar="false" readOnly="true" contenttype="application/vnd.ms-excel#{!updateFileName}.xls"  ShowChat="false" Cache="false">
   <apex:pageblock rendered="{!isFailure = true}">
          <apex:pageBlockTable value="{!bugVsErrorMap}" var="BugError" rendered="{!isFailure = true}">                 
                    <apex:column headerValue="Bug Number" >
                    <apex:outputLink target="_blank" value="/{!BugError.Id}">{!BugError.Name}</apex:outputLink>
                    </apex:column>                    
                    <apex:repeat var="f" value="{!columnName}">
                         <apex:column headerValue="{!columnMap[f]}">
                            <apex:outputfield value="{!BugError[f]}"/>
                         </apex:column>                
                    </apex:repeat>                                          
                    <apex:column headerValue="Validation Error" value="{!bugVsErrorMap[BugError]}" />                                                
          </apex:pageBlockTable> 
    </apex:pageblock>
    <apex:pageBlock >
        <apex:pageblockTable value="{!bugSuccessList}" var="BugSuccess" rendered="{!isSuccess = true}">
                    <apex:column headerValue="Bug Number" >
                    <apex:outputLink target="_blank" value="/{!BugSuccess.Id}">{!BugSuccess.Name}</apex:outputLink>
                    </apex:column>                    
                    <apex:repeat var="f" value="{!columnName}">
                         <apex:column headerValue="{!columnMap[f]}">
                            <apex:outputfield value="{!BugSuccess[f]}"/>
                         </apex:column>                
                    </apex:repeat>                         
        </apex:pageblockTable>
    </apex:pageBlock>
</apex:page>