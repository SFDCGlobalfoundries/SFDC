<apex:page controller="ClsCpkReportOnFV" showHeader="false" sidebar="false" action="{!onLoadIframeAction}">
<style>
   	.pbSubheader {
            background-color: #B7B7B7;
            font-weight: bold;
            font-size: 91%;
            padding: 2px 2px 2px 5px;
            margin-top: 15px;
            overflow: hidden;
            margin-bottom: 2px;
            color: #222222 !important;
     }
</style>

<apex:pageBlock >
 <apex:sectionHeader title="{!cpkReportObj.Name}" />
 <apex:pageBlockSection title="Basic Info" collapsible="false" columns="2" id="blockSection1"> 

            <apex:pageBlockSectionItem >
                <apex:outputText value="{!$ObjectType.CPK_Report__c.fields.FABS__c.label}" />
                <apex:outputText value="{!cpkReportObj.Fab_Assign__c}" />
            </apex:pageBlockSectionItem>
             <apex:pageBlockSectionItem >
                <apex:outputText value="{!$ObjectType.CPK_Report__c.fields.Technology__c.label}"/>
                <apex:outputText value="{!cpkReportObj.Technology__c}" />
            </apex:pageBlockSectionItem>
             <apex:pageBlockSectionItem >
                <apex:outputText value="{!$ObjectType.CPK_Report__c.fields.Report_Cycle__c.label}"/>
                <apex:outputText value="{!cpkReportObj.Report_Cycle__c}" />
            </apex:pageBlockSectionItem>
             <apex:pageBlockSectionItem >
                <apex:outputText value="{!$ObjectType.CPK_Report__c.fields.Process_Descriptions__c.label}" />
                <apex:outputText value="{!cpkReportObj.Process_Descriptions__c}" />
            </apex:pageBlockSectionItem>
             <apex:pageBlockSectionItem >
                <apex:outputLabel value="{!$ObjectType.CPK_Report__c.fields.Release_Date__c.label}" />
                <apex:outputText value="{0,date,MM'/'dd'/'yyyy}">
					       <apex:param value="{!cpkReportObj.Release_Date__c}" />
			   	</apex:outputText>
            </apex:pageBlockSectionItem>
</apex:pageBlockSection>
<apex:pageBlockSection columns="1" >
<apex:iframe src="{!srcFVUrl}" height="380px" width="100%" scrolling="true" />
<!--<apex:iframe src="http://f2fvcsmsd1.gfoundries.com/otcs/livelink.exe?func=ll&objId={!cpkReportObj.CustomerOpenTextId__c}&objAction=browse&viewType=1" height="380px" width="100%" scrolling="true" />-->
</apex:pageBlockSection>
</apex:pageBlock>
</apex:page>