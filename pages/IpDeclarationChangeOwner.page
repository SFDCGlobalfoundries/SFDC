<apex:page controller="IpDeclarationReassignOwnerController" showheader="true" sidebar="false">
    <apex:form id="ReassignForm">
        <apex:sectionHeader title="IP Declaration Form" subtitle="Reassign Owner" help="https://help.salesforce.com/htviewhelpdoc?id=co_edit.htm&siteLang=en_US" />
        <apex:pageBlock >
            <apex:pageMessages />
            <apex:pageBlockButtons >
                <apex:commandButton value="Save" action="{!save}" disabled="{!(allAccountContacts==null || allAccountContacts.size==0)}"/>
                <apex:commandButton value="Cancel" action="{!cancel}"/>
            </apex:pageBlockButtons>
            <table width="100%" cellpadding="3" cellspacing="1" style="border:1px solid #000000;font-family:arial, helvetica, sans-serif;font-size:small">
              <tr> 
                <td style="background-color:#666666;color:#ffffff"> {!$Label.REASSIGN_NEW_OWNER} </td>
                <td><apex:selectList value="{!ownerId}" size="1">
                        <apex:selectOptions value="{!allAccountContacts}"/>
                    </apex:selectList> 
                </td>
              </tr>
              <tr> 
                <td style="background-color:#666666;color:#ffffff"> {!$Label.REASSIGN_NOTES_TO_NEW_OWNER} </td>
                <td>
                    <apex:inputTextarea id="newDesc" value="{!notesToNewOwner}"/>
                </td>
              </tr>
            </table>
        </apex:pageBlock>
    </apex:form>
</apex:page>