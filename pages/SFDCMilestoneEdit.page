<apex:page standardController="SFDC_Project_Milestone__c" tabStyle="SFDC_Project__c" extensions="SFDCMilestoneEditExt" >
<apex:form >
  <apex:pageBlock title="Milestone">
  <apex:pageBlockButtons >
      <apex:commandButton action="{!Save}" value="Save" />
      <apex:commandButton action="{!Cancel}" value="Cancel" />
  </apex:pageBlockButtons>
  <apex:messages />
    <apex:pageBlockSection >
      <apex:outputField value="{!stage.Name__c}"/>
      <apex:outputLabel ></apex:outputLabel>
      <apex:inputField label="Milestone Name" rendered="{!stage.Name__c != ImplementationStageName}" value="{!SFDC_Project_Milestone__c.Name__c}"/>
      <apex:inputField label="Milestone Name" rendered="{!stage.Name__c == ImplementationStageName}" value="{!SFDC_Project_Milestone__c.Implement_Name__c}"/>
      <apex:inputField value="{!SFDC_Project_Milestone__c.Completed__c}"/>
      <apex:inputField value="{!SFDC_Project_Milestone__c.Start_Date__c}"/>
      <apex:inputField value="{!SFDC_Project_Milestone__c.End_Date__c}"/>
      <apex:inputField value="{!SFDC_Project_Milestone__c.Predecessor_Milestone__c}"/>
      <apex:inputField style="width:400px;height:150px;" value="{!SFDC_Project_Milestone__c.Description__c}"/>
      <apex:inputField value="{!SFDC_Project_Milestone__c.Chart_Color__c}"/>
    </apex:pageBlockSection>
  </apex:pageBlock>
</apex:form>
</apex:page>