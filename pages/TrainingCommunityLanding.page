<apex:page showHeader="true" controller="TrainingCommunityLandingCntrlr" sidebar="false" docType="html-5.0" >  
    <vs:importvisualstrap />  
    <style>       
        body{  
            font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;  
        } 
        .main-div {
            background-image:url('{!$Resource.GF_training_background}');
            background-repeat:no-repeat;            
            background-position: center center;            
        } 
        
        .intro{  
            margin-top:20px;  
            font-size:140%;  
            font-weight: 200;  
        }  
        .tile {
            cursor:hand;
            cursor:pointer;
            font-size:20px;
        }
       
    </style>
    <script>
        function openSubCategory(subCategory){
            var newVar = subCategory.replace('&','%26');
            window.open('../apex/TrainingSubCategory?category='+ newVar, '_self')
        }
    </script>
    <apex:form >
        <vs:visualstrapblock >             
            <apex:outputPanel layout="block" styleClass="container-fluid main-div">         
                <apex:outputPanel layout="block" styleClass="row"  style="padding-left:14px">  
                    <apex:commandLink action="{!redirectToInternalView}" value="Go to Internal View" target="_self" styleClass="btn btn-default navbar-btn btn-xs"/>
                </apex:outputPanel>
                <apex:outputPanel layout="block" styleClass="row">                      
                    <apex:repeat value="{!filter.tiles}" var="m">
                        <apex:outputPanel layout="block" styleClass="col-md-4" style="color:#428bca" rendered="{!m.hasAccess}">                        
                            <apex:outputPanel layout="block" styleClass="well tile category" onclick="openSubCategory('{!m.name}')" style="opacity:.9">                                
                                <vs:glyph icon="{!m.icon}"/>                                                    
                                <apex:outputLabel value="{!m.name}" onclick="openSubCategory('{!m.name}')" styleClass="tile" style="padding-left:5px;"/>                            
                            </apex:outputPanel>    
                        </apex:outputPanel>
                    </apex:repeat>                   
                </apex:outputPanel>  
            </apex:outputPanel>  
           <!-- footer -->  
    
           <!-- the modal form-->   
        </vs:visualstrapblock> 
    </apex:form>        
