<apex:page standardController="Apttus_Proposal__Proposal__c"
           extensions="ConfigPlusCustomConfigurationController"
           sidebar="FALSE" 
           id="AdditionalReqPage">
    <div class="bPageTitle">
        <div class="ptBody">
            <div class="content">
                <img src="/s.gif" alt="Device" class="pageTitleIcon" title="Device"/>
                <h1 class="pageType">
                    Custom Configurator Plus Form<span class="titleSeparatingColon">:</span>
                </h1>
                <h2 class="pageDescription">{!Apttus_Proposal__Proposal__c.name}</h2>
                <div class="blank">&nbsp;</div>
            </div>
        </div>
        <div class="ptBreadcrumb"></div>
    </div>
    <apex:form id="AdditionalReqForm">
        <apex:pageBlock >
            <apex:pageMessages id="theMessages"></apex:pageMessages>
            <apex:pageblockButtons >
                <apex:commandButton value="Save" action="{!saveValue}"/>
                <apex:commandButton value="Cancel" action="{!cancel}"/>
            </apex:pageblockButtons>
            <apex:outputPanel id="configReq">
            <apex:pageblockSection title="Customize Configurator Plus Request"
                                   collapsible="true" id="configReq1" rendered="{!NOT(processTechChk)}"> 
                        <apex:inputField label="Process Technology Name" value="{!ConfiguratorPlus.Process_Technology_Name_1__c}" onchange="setFieldVisibility()"/>
                        <apex:actionfunction name="setFieldVisibility" action="{!setFieldVisibility}" rerender="configReq" />
                        <apex:inputField value="{!ConfiguratorPlus.Devices_1__c}" />               
                        <apex:inputField value="{!ConfiguratorPlus.Mask_layers_1__c}" />
                        <apex:inputField value="{!ConfiguratorPlus.Metal_Stacks_1__c}" />
                        <apex:outputText value=""/>
                        <apex:inputTextarea value="{!ConfiguratorPlus.IPs_Edit__c}" rows="5" cols="100"/>

            </apex:pageblockSection>
            
            <apex:pageblockSection title="Customize Configurator Plus Request"
                                   collapsible="true" id="configReq2" rendered="{!processTechChk}" > 
                        
                            <apex:inputField label="Process Technology Name" value="{!ConfiguratorPlus.Process_Technology_Name_1__c}" onchange="setFieldVisibility()"/>
                            <apex:actionfunction name="setFieldVisibility" action="{!setFieldVisibility}" rerender="configReq" />
                            <apex:inputField label="Other Process technology Name" value="{!ConfiguratorPlus.Process_Technology_Name_Edit__c}" /> 
                            <apex:inputField value="{!ConfiguratorPlus.Devices_Edit__c}" />                
                            <apex:inputField value="{!ConfiguratorPlus.Mask_layers_Edit__c}" />
                            <apex:inputField value="{!ConfiguratorPlus.Metal_Stacks_Edit__c}" />                            
                            <apex:inputTextarea value="{!ConfiguratorPlus.IPs_Edit__c}" rows="5" cols="100"/>
            </apex:pageblockSection>
            </apex:outputPanel>
            <apex:pageblockSection title="Packaging Options"
                                   collapsible="true" >
                <apex:inputField value="{!ConfiguratorPlus.Packaging_Option_1__c}"/>
                <apex:inputField value="{!ConfiguratorPlus.Package_Type_1__c}"/>
                <apex:inputField value="{!ConfiguratorPlus.Wire_Material_for_WB_1__c}"/>
                <apex:inputField value="{!ConfiguratorPlus.Bump_for_FC_1__c}"/>
                <apex:inputField value="{!ConfiguratorPlus.Circuit_Under_Bond_Pad_for_WB_1__c}"/>
                <apex:inputField value="{!ConfiguratorPlus.Package_Substrate_Type_for_FC_1__c}"/>
                <apex:inputField value="{!ConfiguratorPlus.Pad_Opening_for_WB__c}"/>
                <apex:inputField value="{!ConfiguratorPlus.Die_Thickness_in_package__c}"/>
                <apex:inputField value="{!ConfiguratorPlus.Pinout_Number_of_Pad_rows__c}"/>
                <apex:inputField value="{!ConfiguratorPlus.Bumping_for_FC_1__c}"/>
                <apex:inputField value="{!ConfiguratorPlus.Package_Substrate_layer_count_for_FC__c}"/>
                <apex:inputField value="{!ConfiguratorPlus.Minimum_Bump_In_Line_pad_pitch__c}"/>
                <apex:inputField value="{!ConfiguratorPlus.Wire_Diameter_for_WB__c}"/>
                <apex:inputField value="{!ConfiguratorPlus.Package_Body_Size__c}"/>
                <apex:inputField value="{!ConfiguratorPlus.Package_Substrate_Thickness__c}"/>
                <apex:inputField value="{!ConfiguratorPlus.Other_Package_Type_1__c}"/>
                <apex:inputField value="{!ConfiguratorPlus.Die_Size_is_Pre_Shrink_Post_Rotation__c}"/>
                <apex:inputField value="{!ConfiguratorPlus.Packaging_Customisation_Details__c}"/>
            </apex:pageblockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>