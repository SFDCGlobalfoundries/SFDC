<apex:page controller="TeamRoomMeetingMinutesSendMailController" tabStyle="Team_Room__c" showChat="false">
  <apex:form id="sendEmail">
  <apex:messages />
    <apex:pageBlock title="Email Meeting Minutes">
    <apex:pageBlockButtons >
        <apex:commandButton action="{!sendMail}" value="Send Email"/>
        <apex:commandButton action="{!cancel}" value="Cancel"/>
    </apex:pageBlockButtons>
    
    <apex:pageBlockSection title="Recipients" collapsible="false" columns="2">
        <apex:inputField label="To" value="{!email.ToContact1__c}"/>
        <apex:inputField label="Additional To:" value="{!email.ToAdditional__c}" style="width:300px;"/>
        <apex:inputField label="CC" value="{!email.CCUser1__c}"/>
        <apex:inputField label="Additional CC:" value="{!email.CCAdditional__c}" style="width:300px;"/>
        <apex:inputField label="BCC" value="{!email.BCCUser1__c}"/>
        <apex:inputField label="Additional BCC:" value="{!email.BCCAdditional__c}" style="width:300px;"/>
        
        <apex:inputField label="Subject" value="{!email.EmailSubject__c}"  style="width:400px;"/>
    </apex:pageBlockSection>
     <apex:pageBlockSection title="Message" collapsible="false" columns="1">
         <apex:inputField label="Meeting Participants" value="{!email.Meeting_Participants__c}"/>
         <apex:inputField value="{!email.Meeting_Notes__c}"/>
     </apex:pageBlockSection>
   </apex:pageBlock>
  </apex:form>
</apex:page>