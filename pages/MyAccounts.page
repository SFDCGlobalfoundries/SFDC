<apex:page sidebar="false"  controller="ClsMyAccounts" id="mydevicepage">
<html>
<head>
<style type="text/css" media="screen">
        body,
        html {
            width: 100%;
            height: 100%;
            overflow: hidden;
        }
         * {
            padding: 0;
            margin: 0;
        }
               </style>
              </head>
              <body>
    <!--------------------------------------------------- StyleSheet -------------------------------------------->
    <apex:stylesheet value="{!URLFOR($Resource.FV2Styles, 'FV2Styles/css/style.css')}" id="stylesheet_location"/> 
    <!----------------------------------------------------------------------------------------------------------->
    
   <!-- --------------------------------Main Page Container Starts From Here ------------------------------------>    
   <div class="container">
        <!-- Body Content Container starts from here -->
        <div class="bodyContentContainer">
           <div class="blankbodyContainer"/>
           <!-- Form Section starts from here -->
           <apex:form id="form">
                <!-- Body content section starts from here -->
                
                <div class="bodyContent">
                    <!----- Left Navigation Container (All Links are present in this section) Section strats from here ------>
                    <div class="leftNavContainer">
                        <h2>My Settings Links</h2>
                        <ul>
                            <apex:iframe src="{!OpenTextLoginServerURL}" height="1px" width="1px" />
                            <li><span class="preferences"><apex:commandLink value="{!$Label.Preferences}" onclick="OpenPage('preferences'); return false;" id="preferencesLink"/></span></li>
                            <li><span class="subscription" ><apex:commandLink onclick="OpenPage('subscription'); return false;" value="{!$Label.Subscription}" id="subscriptionLink"/></span></li>
                            <li><span class="manage"><apex:commandLink onclick="OpenPage('subacct'); return false;" value="{!$Label.Manage_Sub_Account}" id="managesubAccountLink"/></span></li>
                            <li><span class="new"><apex:commandLink onclick="OpenPage('newacctreq'); return false;" value="{!$Label.New_Account_Request}" id="newAccountReqLink"/></span></li>
                            <li><span class="nda"><apex:commandLink onclick="OpenPage('nda'); return false;" value="{!$Label.NDA}" id="ndaLink"/></span></li>
                            <li><span class="contract"><apex:commandLink onclick="OpenPage('contract'); return false;" value="{!$Label.Contract}" id="contractLink"/></span></li>
                            <li><span class="Survey">
                                <apex:commandLink onclick="window.open('{!$Label.Survey_URL}', '_blank');" value="{!$Label.Survey}" id="surveyLink"/>
                            </span></li>
                        </ul>
                        <h2>Associated Apps</h2>
                        <div class="associatedApps" >
                            <apex:commandLink onclick="OpenPage('ipdeclare'); return false;" value="{!$Label.IP_Declaration}" id="ipdeclarationLink"/>
                            <apex:commandLink onclick="OpenPage('exportcntrl'); return false;" value="{!$Label.Export_Control}" id="exportcontrolLink"/>
                            <apex:commandLink onclick="OpenPage('companyprofile'); return false;" value="{!$Label.Company_Profile}" id="companyProfileLink"/>
                        </div>
                    </div>
                    <!---------------------------------------- Left Navigation Container Section Ends ------------------------>
                </div>
                <!-- Body Content section ends -->
                
                <!-- This Action Function script is responsible to show the pageblock section as per user will select the link -->
                
                <apex:actionFunction action="{!redirect}" name="OpenPage" reRender="label,pb,frame">
                    <apex:param assignTo="{!Page}" value="" name="param1"/>
                </apex:actionFunction>
                
                <!-- Action Function ends  -->
                
                <!-- This middle section shows the MyAccounts Pageblock -->
                <div class="middleSecContainer">
                     <div class="middleSecContainerLT"/>
                     <div class="middleSecContainerRT"/>
                     <apex:image url="{!URLFOR($Resource.FV2Styles,'FV2Styles/images/qualityReportsIcon.gif')}" width="30px" height="30px" id="caption_image"/>
                     <apex:outputLabel value="{!respectiveLevel}" id="label" style="vertical-align:bottom;font-size:15px;font-style:normal;"/>
                     <hr color="#ccced0" size="1" width="100%"/>
                     <apex:pageBlock id="pb" >
                       <!-- <apex:iframe width="900px" height="300px" src="{!OpenPageURL}" scrolling="true" id="frame"/>-->
                       <iframe id="vfOpenText" style="overflow-x:hidden; overflow-y:auto;" src="{!OpenPageURL}" width="100%" height="300px" scrolling="yes" frameborder="1"></iframe>                   
                    </apex:pageBlock>
                    <div class="middleSecContainerLB"/>
                   <div class="middleSecContainerRB"/>
                 </div>
                 <!-- Middle Section ends -->
                </apex:form>
                <!-- Form  Section ends-->
                
       </div>
       <!-- Body Content Container ends -->
   </div>
   </body>
</html>
   <!-- Main Page Container ends-->
</apex:page>


