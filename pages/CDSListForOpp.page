         <script type="text/javascript">
            $(document).ready(function () {
                paginationListForOpp();
            });
            function paginationListForOpp(){
                $('#table_list').dataTable({
                    "ordering" : false,
                      "info"  : false,
                      "searching" : false 
                });
            }
    </script>
    </head>
    <apex:pageMessages showDetail="false" id="PgMessages"/>
    <apex:form >
        <apex:pageBlock >
             <apex:pageBlockButtons location="Top">
