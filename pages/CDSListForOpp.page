            </apex:pageBlockButtons>
               <table class="ui-widget" style="table-layout:fixed;font-size:11px;" id="table_list">
                <thead>
                    <tr>
                        <td class="ui-widget-header">Name</td>
                        <td class="ui-widget-header">Device</td>
                        <td class="ui-widget-header">Opportunity</td>
                        <td class="ui-widget-header">Option </td>
                        
                    </tr>
                </thead>                        
                 <tbody>
                    <apex:repeat value="{!custDesignListRedZone}" var="cust" rendered="{!if(OR(itarFlag == 'Yes',RedZone),True,False)}">
                         <tr>
                             <td class="ui-widget-content" style="padding:0px;height:12px">
                             <!--  <a onclick="location.href='/{!cust.id}';" target="_blank">
                               <apex:outputField value="{!cust.Name}" style="width:92px;padding:0px;"/>
                               </a>-->
                                 <apex:outputLink value="/apex/CDSViewPageFrame?id={!cust.id}&optId={!optId}&devId={!deviceId}" target="_blank" style="width:270px;">
                                      <apex:outputField value="{!cust.Name}" style="width:92px;padding:0px;"/>
                                 </apex:outputLink>
                             </td>   
                             <td class="ui-widget-content" style="padding:0px;height:12px"> 
                               <apex:outputField value="{!cust.Device__c}" style="width:92px;padding:0px;" />
                             </td> 
                             <td class="ui-widget-content" style="padding:0px;height:12px"> 
                               <apex:outputField value="{!cust.DIW_Opp_Control_Number__c}" style="width:92px;padding:0px;" />
                             </td> 
                             
                             <td class="ui-widget-content" style="padding:0px;height:12px"> 
                               <apex:outputField value="{!cust.DIW_Option_Control_Number__c}" style="width:92px;padding:0px;" />
                             </td> 
                             
                                </tr> 
                            </apex:repeat>     
                            <apex:repeat value="{!custDesignListNonRedZone}" var="cust" rendered="{!if(AND(itarFlag == 'No',!RedZone),True,False)}">
                         <tr>
                             <td class="ui-widget-content" style="padding:0px;height:12px">
                             <!--  <a onclick="location.href='/{!cust.id}';" target="_blank">
                               <apex:outputField value="{!cust.Name}" style="width:92px;padding:0px;"/>
                               </a>-->
                                 <apex:outputLink value="/apex/CDSViewPageFrame?id={!cust.id}&optId={!optId}&devId={!deviceId}" target="_blank" style="width:270px;">
                                      <apex:outputField value="{!cust.Name}" style="width:92px;padding:0px;"/>
                                 </apex:outputLink>
                             </td>   
                             <td class="ui-widget-content" style="padding:0px;height:12px"> 
                               <apex:outputField value="{!cust.Device__c}" style="width:92px;padding:0px;" />
                             </td> 
                             <td class="ui-widget-content" style="padding:0px;height:12px"> 
                               <apex:outputField value="{!cust.DIW_Opp_Control_Number__c}" style="width:92px;padding:0px;" />
                             </td> 
                             
                             <td class="ui-widget-content" style="padding:0px;height:12px"> 
                               <apex:outputField value="{!cust.DIW_Option_Control_Number__c}" style="width:92px;padding:0px;" />
                             </td> 
                             
                                </tr> 
                                     </apex:repeat>     
                                </tbody>
                                    </table>                   
                   
