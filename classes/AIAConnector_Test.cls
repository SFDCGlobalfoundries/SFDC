    static testMethod void testClass(){
        
        Account acc = getAccount('MYTEST ACCOUNT1');         
        //call the class methods        
        AIAConnector.sendAccount('test payload');
        Test.startTest();
        AIAConnector.sendAccount(acc.id,'test payload');
        Test.stopTest();
        AIAConnector.checkMultipleFiring(acc.id);
        AIAConnector.getConnectionParam('AIA_TO_ERP_ENDPOINT');
        AIAConnector.logStatus(acc.id,'Account','SUCCESS');
    }
    
    private static Account getAccount(string AccountName)
    {
        Account acct = [SELECT Id FROM Account Where Name =: AccountName];
        
        return acct;
    }
