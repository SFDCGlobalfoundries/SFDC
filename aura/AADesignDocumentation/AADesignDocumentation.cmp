<aura:component controller="AARequirementDocument">
	<!-- <aura:handler name="init" value="{!this}" action="{!c.doInit}"/> -->
	<aura:handler name="change" value="{!v.designId}" action="{!c.doInit}"/>
	<aura:attribute type="String" name="designId"/>
	<div>
		<div class="moveABit aasection">
			<div class="heading3">Design Document</div>
			<div class="heading4">{!v.design.Name}</div>
			<div class="moveABit">
				<ui:outputRichText value="{!v.design.Design_Description__c}"/>
			</div>
			<aura:renderIf isTrue="{!v.design.Code_Components__r.length > 0}">
				<table class="slds-table slds-table--bordered slds-max-medium-table--stacked">
				  <thead>
				    <tr class="slds-text-heading--label">
				      <th scope="col">
				        <span class="slds-truncate">Component Name</span>
				      </th>
				      <th scope="col">
				        <span class="slds-truncate">Component Type</span>
				      </th>
				    </tr>
				  </thead>
				  <tbody>
				  	<aura:iteration items="{!v.design.Code_Components__r}" var="comp">
					    <tr class="slds-hint-parent">
					      <td data-label="component-name" role="row">{!comp.Name}</td>
					      <td data-label="component-type"  role="row">{!comp.Type__c}</td>
					    </tr>
					</aura:iteration>
				  </tbody>
				</table>
			</aura:renderIf>
		</div>
	</div>
</aura:component>