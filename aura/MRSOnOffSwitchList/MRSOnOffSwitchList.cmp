<aura:component >
	<aura:attribute name="setting" type="MRSOnOffSwitchFormController.SwitchMRS" />
    <aura:registerEvent name="updateSetting" type="c:MRSOnOffSwitchUpdateEvt"/> <!-- MRSOnOffSwitchUpdateEvt is name of event *.evt -->
    
    <div class="slds-form-element">
        <label class="slds-checkbox--toggle slds-grid width-class">
            <div class="row innerRow">
                <div class="question"> 
                    {!v.setting.cName}
                </div>
                
                <div class="switch" onchange="alert('hello');">
                    <lightning:input type="toggle" label="." name="togglevalue" checked="{!v.setting.cValue}" onchange="{!c.update}"/>
                </div>
            </div>
        </label>
    </div>
</aura:component>