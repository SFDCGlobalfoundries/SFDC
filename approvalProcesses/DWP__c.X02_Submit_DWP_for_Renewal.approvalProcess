            <name>Recall_notice</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Set_status_back_to_1st_approval</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
