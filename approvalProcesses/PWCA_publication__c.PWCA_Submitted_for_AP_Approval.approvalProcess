<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>PWCA_Document_been_Approved</name>
                <type>Alert</type>
            </action>
            <action>
                <name>PWCA_Update_Record_Type</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Status_Updates</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>AP_Approval</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>AP Sites Reviewer</description>
        <label>PWCA - AP Site Review</label>
        <name>PWCA_AP_Site_Review</name>
        <rejectionActions>
            <action>
                <name>PWCA_Document_been_Rejected</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Status_Change_Prelim</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Document Review for AP Approval</description>
    <emailTemplate>unfiled$public/PWCA_Submitted_Approved</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>PWCA_publication__c.Reviewer_Needed__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>PWCA_publication__c.Document_Status__c</field>
            <operation>notEqual</operation>
            <value>Effective</value>
        </criteriaItems>
        <criteriaItems>
            <field>PWCA_publication__c.Regional_Site_Approval__c</field>
            <operation>contains</operation>
            <value>AP</value>
        </criteriaItems>
        <criteriaItems>
            <field>PWCA_publication__c.Document_Status__c</field>
            <operation>notEqual</operation>
            <value>Approved</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Status_Change_Prelim</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Status_Change_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>PWCA _Submitted_for_AP_ApprovalProcess</label>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
