};

Calendar.prototype.rollToYear = function(year)
{
    var rollDate = new Date(year,this.currentDate.getMonth(),1,0,0,0,0);
    this.setCurrentDate(rollDate);
};

Calendar.prototype.reset = function()
{
    this.setCurrentDate(this.now);
};


