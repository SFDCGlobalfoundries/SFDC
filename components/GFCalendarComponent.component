    var verbose = false;
    /*
    if((firstDay.getFullYear() == 2011)&&(firstDay.getMonth() == 10)&&(firstDay.getDate() == 6))
    {
        verbose = true;
    }
    */
    var days = new Array();
    days[0] = firstDay;
    if(verbose)
    {
        alert("0=" + days[0]);  
    }
    for(var i = 1; i <= 5; ++i)
    {
        days[i] = GF.date.DATE_UTIL.addDays(firstDay,i);
        if(verbose)
        {
            alert(i + "=" + days[i]);
        }
    }
    days[6] = lastDay;
    
    if(verbose)
    {
        alert("6="+days[6]);
    }
    
    var selectedDate = cal.getSelectedDate();
    var id = null;
    var sid = null;
    var tokens = null;
    var row = null;
    var col = null;
    var dateInt = firstDay.getDate();
