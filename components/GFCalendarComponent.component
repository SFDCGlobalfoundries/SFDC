function Activity(id,type,psubject,psdate,pedate,purl,activityColor,pfilterObject)
{
    this.id = id;
    this.type = type;
    this.subject = psubject;
    this.startDate = psdate;
    this.endDate = pedate;
    this.url = purl;
    this.activityColor = activityColor;
    if(pfilterObject)
